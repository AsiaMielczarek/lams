<?xml version="1.0" encoding="utf-8"?>
<ActivityComponent xmlns="org.lamsfoundation.lams.author.components.activity.*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	verticalAlign="middle" horizontalAlign="center" 
	horizontalScrollPolicy="off" 
	paddingTop="3" paddingLeft="3" paddingRight="6" paddingBottom="3"
	>
	
	<mx:Script>
		<![CDATA[
			import org.lamsfoundation.lams.author.util.Constants;
			import org.lamsfoundation.lams.author.model.activity.CombinedActivity;
			import mx.containers.VBox;
			import mx.core.Application;
			import mx.controls.Label;
			import org.lamsfoundation.lams.author.model.learninglibrary.Tool;
			import org.lamsfoundation.lams.author.model.learninglibrary.LearningLibraryEntry;
			
			public var toolActivityComponent1:ToolActivityComponent;
			public var toolActivityComponent2:ToolActivityComponent;
			
			[Bindable] private var bgColour:uint;
			
			[Bindable] private var bgColour1:uint;
			[Bindable] private var bgColour2:uint;

			[Bindable]
			public function get activity():CombinedActivity {
				return this._activity as CombinedActivity;
			}
			
			public function set activity(activity:CombinedActivity):void {
				this._activity = activity;
			}
		]]>
	</mx:Script>
	
	<mx:VBox id="vbox" verticalAlign="middle" horizontalAlign="center" borderStyle="solid"
		dropShadowEnabled="true" shadowDirection="right" cornerRadius="4" minWidth="70" minHeight="50"
		backgroundColor="#C2D5FE" paddingTop="3" paddingBottom="3" paddingLeft="5" paddingRight="5"
		verticalGap="0"
		>
		<ToolActivityComponent activity="{activity.toolActivity1}" isTitleShown="false" />
		<ToolActivityComponent activity="{activity.toolActivity2}" isTitleShown="false" />
		<mx:Label id="lblTitle" text="{activity.title}"/>
	</mx:VBox>
</ActivityComponent>
