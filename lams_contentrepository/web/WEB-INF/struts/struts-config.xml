   <action-mappings >
      <action
         path="/loginRepository"
         type="org.lamsfoundation.lams.contentrepository.struts.action.LoginRepositoryAction"
         name="loginRepositoryForm"
         validate="true"
         scope="request"
         attribute="loginRepositoryForm"
         input="/loginRepository.jsp"
         parameter="method">
         <forward name="success" path="/nodeSelection.do?method=getList"/>
	     <forward name="error" path="/error.jsp" />
      </action>
      <action
         path="/nodeSelection"
         type="org.lamsfoundation.lams.contentrepository.struts.action.NodeSelectionAction"
         name="nodeSelectionForm"
         input="/nodeSelection.jsp"
         parameter="method">
	     <forward name="nodelist" path="/nodeSelection.jsp" />
	     <forward name="packagelist" path="/packageList.jsp" />
	     <forward name="error" path="/error.jsp" />
      </action>
      <action
         path="/addFileContent"
         type="org.lamsfoundation.lams.contentrepository.struts.action.AddFileContentAction"
         name="addFileContentForm"
         input="/addNode.jsp"
         parameter="method">
         <forward name="success" path="/nodeSelection.do?method=getList"/>
	     <forward name="error" path="/error.jsp" />
      </action>
   </action-mappings>

   <controller bufferSize="4096" debug="0" />
   <message-resources parameter="org.lamsfoundation.lams.contentrepository.struts.ApplicationResources"/>
