<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.contentrepository.CrNodeVersionProperty"
        table="lams_cr_node_version_property"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="transactional" />

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="0"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-CrNodeVersionProperty.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="name"
            length="255"
            not-null="true"
        />

        <property
            name="value"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="value"
            length="255"
            not-null="true"
        />

        <property
            name="type"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="type"
            length="3"
            not-null="true"
        />

        <many-to-one
            name="crNodeVersion"
            class="org.lamsfoundation.lams.contentrepository.CrNodeVersion"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="nv_id" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-CrNodeVersionProperty.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
