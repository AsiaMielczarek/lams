<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.contentrepository.CrNode"
        table="lams_cr_node"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >
        <cache usage="transactional" />

        <id
            name="nodeId"
            column="node_id"
            type="java.lang.Long"
            unsaved-value="0"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-CrNode.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="path"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="path"
            length="255"
        />

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="type"
            length="255"
            not-null="true"
        />

        <property
            name="createdDateTime"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            access="property"
            column="created_date_time"
            length="14"
        />

        <property
            name="nextVersionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="next_version_id"
        />

        <many-to-one
            name="crWorkspace"
            class="org.lamsfoundation.lams.contentrepository.CrWorkspace"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="workspace_id" 
            />
        </many-to-one>

        <many-to-one
            name="parentNodeVersion"
            class="org.lamsfoundation.lams.contentrepository.CrNodeVersion"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="parent_nv_id" 
            />
        </many-to-one>

        <set
            name="crNodeVersions"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
            <cache 
                usage="transactional" 
             />

              <key
                  column="node_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.contentrepository.CrNodeVersion"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-CrNode.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
