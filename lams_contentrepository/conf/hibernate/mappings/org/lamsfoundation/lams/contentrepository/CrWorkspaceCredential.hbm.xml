<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.contentrepository.CrWorkspaceCredential"
        table="lams_cr_workspace_credential"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="wcId"
            column="wc_id"
            type="java.lang.Long"
            unsaved-value="0"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-CrWorkspaceCredential.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="crWorkspace"
            class="org.lamsfoundation.lams.contentrepository.CrWorkspace"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="workspace_id" 
            />
        </many-to-one>

        <many-to-one
            name="crCredential"
            class="org.lamsfoundation.lams.contentrepository.CrCredential"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="credential_id" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-CrWorkspaceCredential.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
