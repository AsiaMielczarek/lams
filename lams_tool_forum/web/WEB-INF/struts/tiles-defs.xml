<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">
<tiles-definitions>
	<!--
		This is a default layout which has a header and body
	-->
	<definition name="tiles:defaultLayout" path="/includes/defaultLayout.jsp">
    	<put name="body" value=""/>
    	<put name="header" value="/includes/header.jsp"/>
	</definition>

	<definition name="tiles:layout" path="/includes/layout.jsp">
    	<put name="pageTitleKey" value=""/>
    	<put name="body" value=""/>
    	<put name="header" value="/includes/header.jsp"/>
    	<put name="footer" value="/includes/footer.jsp"/>
	</definition>

	<!-- B: Generic -->
	<definition name="tiles:/error" extends="tiles:layout">
    	<put name="body" value="/includes/error.jsp"/>
	</definition>

	<definition name="tiles:/blank" extends="tiles:layout">
    	<put name="body" value="/includes/blank.jsp"/>
	</definition>
	<!-- E: Generic -->
	
	<!-- B: Authoring -->
    <definition name="tiles:/authoring/forum/newTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.add"/>
    	<put name="body" value="/jsps/authoring/message/create.jsp"/>
	</definition>
	<definition name="tiles:/authoring/forum/viewTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.view"/>
    	<put name="body" value="/jsps/authoring/message/view.jsp"/>
	</definition>
	<definition name="tiles:/authoring/forum/editTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.edit"/>
    	<put name="body" value="/jsps/authoring/message/edit.jsp"/>
	</definition>
	<!-- E: Authoring -->

	<!-- B: Learning -->
	<!-- MAIN PAGE for learner -->	
	<definition name="tiles:/learning/forum/viewForum" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.view"/>
    	<put name="body" value="/jsps/learning/viewforum.jsp"/>
	</definition>
	
	<definition name="tiles:/learning/forum/viewThread" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.view.thread"/>
    	<put name="body" value="/jsps/learning/viewthread.jsp"/>
	</definition>
	
    <definition name="tiles:/learning/forum/newTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.add"/>
    	<put name="body" value="/jsps/learning/create.jsp"/>
	</definition>

    <definition name="tiles:/learning/forum/replyTopic" extends="tiles:layout">
          <put name="pageTitleKey" value="title.message.reply"/>
          <put name="body" value="/jsps/learning/reply.jsp"/>
    </definition>
    
    <definition name="tiles:/learning/forum/editTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.edit"/>
    	<put name="body" value="/jsps/learning/edit.jsp"/>
	</definition>
	<!-- E: Authoring -->

</tiles-definitions>
