<tiles-definitions>
	<!--
		This is a default layout which has a header and body
	-->
	<definition name="tiles:defaultLayout" path="/includes/defaultLayout.jsp">
    	<put name="body" value=""/>
    	<put name="header" value="/includes/header.jsp"/>
	</definition>

	<!--
		This is a layout which has a header, footer and body.
		This layout also displays the page header (pageIcon + pageTitleKey)
		at the top of the page
	-->
	<definition name="tiles:layout" path="/includes/layout.jsp">
    	<put name="pageTitleKey" value=""/>
    	<put name="body" value=""/>
    	<put name="header" value="/includes/header.jsp"/>
    	<put name="footer" value="/includes/footer.jsp"/>
	</definition>

    <definition name="tiles:/authoring/forum/newTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.add"/>
    	<put name="body" value="/jsps/authoring/message/create.jsp"/>
	</definition>
	<definition name="tiles:/authoring/forum/viewTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.view"/>
    	<put name="body" value="/jsps/authoring/message/view.jsp"/>
	</definition>
	<definition name="tiles:/authoring/forum/editTopic" extends="tiles:layout">
    	<put name="pageTitleKey" value="title.message.view"/>
    	<put name="body" value="/jsps/authoring/message/edit.jsp"/>
	</definition>
	
    <definition name="tiles:/authoring/forum/edit" path="/includes/tabsLayout.jsp" >
       	<put name="pageIcon" value="icon_settings_s.gif"/>
       	<put name="pageTitleKey" value="title.forum.edit"/>
        <put name="selectedIndex" value="0" />
        <put name="parameterName" value="selected" />
        <put name="actionName" value="/authoring/forum/edit.do" />
        <put name="header" value="/includes/header.jsp"/>
        <put name="footer" value="/includes/footer.jsp"/>
        <putList name="tabList" >
            <item value="Basic" link="/jsps/authoring/forum/editBasic.jsp" classtype="org.apache.struts.tiles.beans.SimpleMenuItem" />
            <item value="Advanced" link="/jsps/authoring/forum/editAdvanced.jsp" classtype="org.apache.struts.tiles.beans.SimpleMenuItem" />
            <item value="Instructions" link="/jsps/authoring/forum/editInstructions.jsp" classtype="org.apache.struts.tiles.beans.SimpleMenuItem" />
        </putList>
    </definition>
	<!-- B: Generic -->

	<definition name="tiles:/error" extends="tiles:layout">
    	<put name="body" value="/includes/error.jsp"/>
	</definition>

	<definition name="tiles:/blank" extends="tiles:layout">
