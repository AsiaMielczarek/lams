<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <!-- Hibernate SessionFactory -->
    <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>

        <!-- Must references all OR mapping files. -->
        <property name="mappingResources">
            <list>
               <value>org/lamsfoundation/lams/tool/forum/persistence/Forum.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/forum/persistence/Message.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/forum/persistence/Attachment.hbm.xml</value>
            </list>
        </property>
    </bean>

    <!-- core beans -->
    <bean id="forumDao" class="org.lamsfoundation.lams.tool.forum.persistence.ForumDao">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>


   <bean id="attachmentDao" class="org.lamsfoundation.lams.tool.forum.persistence.AttachmentDao">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>


   <bean id="messageDao" class="org.lamsfoundation.lams.tool.forum.persistence.MessageDao">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>

    <!-- Managers -->
    <bean id="permissionManager" class="org.lamsfoundation.lams.tool.forum.permissions.PermissionManagerImpl">
    </bean>

    <bean id="forumManagerTarget" class="org.lamsfoundation.lams.tool.forum.service.ForumManagerImpl">
        <property name="forumDao">
            <ref local="forumDao"/>
        </property>
        <property name="attachmentDao">
            <ref local="attachmentDao"/>
        </property>
        <property name="messageDao">
            <ref local="messageDao"/>
        </property>
    </bean>

    <bean id="forumService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
        <property name="target">
            <ref local="forumManagerTarget"/>
        </property>
        <property name="proxyTargetClass">
            <value>false</value>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="createForum">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="deleteForum">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="createMessage">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="deleteMessage">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="modifyMessage">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="replyToMessage">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
            </props>
        </property>
    </bean>

	<bean id="toolContentHandler" class="org.lamsfoundation.lams.tool.forum.util.ForumToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean> 

</beans>
