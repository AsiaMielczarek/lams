<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.forum.persistence.Learner"
        table="tl_lafrum11_forum_learners"
    >

        <id
            name="uuid"
            column="uuid"
            type="java.lang.Long"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Learner.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="userID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
            length="20"
        />

        <property
            name="status"
            type="boolean"
            update="true"
            insert="true"
            column="status"
            length="1"
        />

        <property
            name="sessionID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
            length="20"
        />

        <property
            name="fullName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="fullName"
            length="255"
        />

        <property
            name="userName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="userName"
            length="255"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Learner.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
