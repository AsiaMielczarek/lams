<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.forum.persistence.Forum"
        table="tl_lafrum11_forum"
    >

        <id
            name="uuid"
            column="UUID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Forum.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="CREATED"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="UPDATED"
        />

        <property
            name="createdBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="CREATEDBY"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="TITLE"
        />

        <property
            name="allowAnnomity"
            type="boolean"
            update="true"
            insert="true"
            column="ALLOWANNOMITY"
        />

        <property
            name="forceOffline"
            type="boolean"
            update="true"
            insert="true"
            column="FORCEOFFLINE"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="LOCKWHENFINISHED"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="INSTRUCTIONS"
        />

        <property
            name="onlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ONLINEINSTRUCTIONS"
        />

        <property
            name="offlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="OFFLINEINSTRUCTIONS"
        />

        <set
            name="attachments"
            table="ATTACHMENT"
            lazy="false"
            inverse="false"
            cascade="all"
            sort="unsorted"
        >

            <key
                column="forum"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.forum.persistence.Attachment"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Forum.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

        <query name="allForums"><![CDATA[
            from Forum forum
        ]]></query>

</hibernate-mapping>
