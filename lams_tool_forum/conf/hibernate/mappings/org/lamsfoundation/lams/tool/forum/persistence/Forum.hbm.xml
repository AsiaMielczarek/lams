<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.forum.persistence.Forum"
        table="tl_lafrum11_forum"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Forum.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="createdBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="allowAnonym"
            type="boolean"
            update="true"
            insert="true"
            column="allow_anonym"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="onlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="online_instructions"
        />

        <property
            name="offlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="offline_instructions"
        />

        <set
            name="attachments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="forum_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.forum.persistence.Attachment"
            />

        </set>

        <set
            name="messages"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="forum_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.forum.persistence.Message"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="allowEdit"
            type="boolean"
            update="true"
            insert="true"
            column="allow_edit"
        />

        <property
            name="allowRichEditor"
            type="boolean"
            update="true"
            insert="true"
            column="allow_rich_editor"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Forum.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

        <query name="allForums"><![CDATA[
            from Forum forum
        ]]></query>
        <query name="forumByContentId"><![CDATA[
            from Forum forum where forum.contentId=?
        ]]></query>

</hibernate-mapping>
