<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->
	
	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="learnerService" class="org.lamsfoundation.lams.learning.service.DummyLearnerService" singleton="false">
		<property name="lessonDAO"><ref bean="lessonDAO"/></property>
		<property name="activityMapping"><ref local="activityMapping"/></property>
	</bean>
	
	<bean id="toolService" class="org.lamsfoundation.lams.tool.service.DummyToolService" singleton="false">
	</bean>

	<bean id="progressEngine" class="org.lamsfoundation.lams.learning.progress.ProgressEngine" singleton="false">
	</bean>
	
	<bean id="activityMapping" class="org.lamsfoundation.lams.learning.web.util.ActivityMapping" singleton="false">
		<property name="toolService"><ref bean="toolService" /></property>
		<property name="baseURL"><value>http://127.0.0.1:8080/lams_learning/</value></property>
	</bean>
	

	<!-- bean id="notebookService" class="org.lamsfoundation.lams.notebook.service.NotebookService" singleton="false">
		<property name="notebookEntryDAO"><ref bean="notebookEntryDAO"/></property>
	</bean-->

</beans>
