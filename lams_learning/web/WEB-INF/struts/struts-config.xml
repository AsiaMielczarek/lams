	<forward name="error" path="/error.jsp" />
	<forward name="noSessionError" path="/noSessionError.jsp" />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/notebook/DisplayEntry"
      type="org.lamsfoundation.lams.learning.web.action.DisplayNotebookEntry"
      name="notebookForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayEntry"
        path=".journalDetail"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/DisplayLoadToolActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayLoadToolActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayTool"
        path=".loadToolActivity"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayToolActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayToolActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/test/DummyTool"
      type="org.lamsfoundation.lams.learning.web.action.DummyToolAction"
      name="dummyToolForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="display"
        path="/test/dummyTool.jsp"
        redirect="false"
      />
      <forward
        name="next"
        path=".requestDisplay"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayParallelActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayParallelActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayParallel"
        path=".parallelActivity"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayOptionsActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayOptionsActivity"
      name="optionsActivityForm"
      scope="request"
      input="/Activity.do"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayOptions"
        path=".optionsActivity"
        redirect="false"
      />
    </action>
    <action
      path="/CompleteActivity"
      type="org.lamsfoundation.lams.learning.web.action.CompleteActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/notebook/SaveEntry"
      type="org.lamsfoundation.lams.learning.web.action.SaveNotebookEntry"
      name="notebookForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayEntry"
        path="/DisplayEntry"
        redirect="true"
      />
    </action>
    <action
      path="/test/DblSubmit"
      type="org.lamsfoundation.lams.learning.web.action.TestDblSubmitAction"
      name="testDblSubmitForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="display"
        path="/test/dblSubmitTest.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/ChooseActivity"
      type="org.lamsfoundation.lams.learning.web.action.ChooseActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/test/DummyLesson"
      type="org.lamsfoundation.lams.learning.web.action.DummyLessonAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayLesson"
        path="/DisplayActivity.do"
        redirect="true"
      />
    </action>

