<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="activityForm"
      type="org.lamsfoundation.lams.learning.web.form.ActivityForm"
    />
    <form-bean
      name="dummyToolForm"
      type="org.lamsfoundation.lams.learning.web.form.DummyToolForm"
    />
    <form-bean
      name="testDblSubmitForm"
      type="org.lamsfoundation.lams.learning.web.form.TestDblSubmitForm"
    />
    <form-bean
      name="optionsActivityForm"
      type="org.lamsfoundation.lams.learning.web.form.OptionsActivityForm"
    />

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="error" path="/error.jsp" />
	<forward name="noSessionError" path="/noSessionError.jsp" />
	<forward name="displayActivity" path="/DisplayActivity.do" />
	<forward name="displayToolActivity" path="/DisplayToolActivity.do" />
	<forward name="displayParallelActivity" path="/DisplayParallelActivity.do" />
	<forward name="displayOptionsActivity" path="/DisplayOptionsActivity.do" />
	<!-- forward name="displayGateActivity" path="/DisplayGateActivity.do" /-->
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/DisplayActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/DisplayToolActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayToolActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayTool"
        path=".toolActivity"
        redirect="false"
      />
    </action>
    <action
      path="/test/DummyTool"
      type="org.lamsfoundation.lams.learning.web.action.DummyToolAction"
      name="dummyToolForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="display"
        path="/test/dummyTool.jsp"
        redirect="false"
      />
      <forward
        name="next"
        path=".requestDisplay"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayParallelActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayParallelActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayParallel"
        path=".parallelActivity"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayOptionsActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayOptionsActivity"
      name="optionsActivityForm"
      scope="request"
      input="/Activity.do"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayOptions"
        path=".optionsActivity"
        redirect="false"
      />
    </action>
    <action
      path="/CompleteActivity"
      type="org.lamsfoundation.lams.learning.web.action.CompleteActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/test/DblSubmit"
      type="org.lamsfoundation.lams.learning.web.action.TestDblSubmitAction"
      name="testDblSubmitForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="display"
        path="/test/dblSubmitTest.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/ChooseActivity"
      type="org.lamsfoundation.lams.learning.web.action.ChooseActivity"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/test/DummyLesson"
      type="org.lamsfoundation.lams.learning.web.action.DummyLessonAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayLesson"
        path="/DisplayActivity.do"
        redirect="true"
      />
    </action>

<action path="/requestDisplay"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".requestDisplay"/>
<action path="/parallelWait"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".parallelWait"/>
<action path="/lessonComplete"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".lessonComplete"/>

  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

<message-resources parameter="org.lamsfoundation.lams.learning.LearningResources" />

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config" value="/WEB-INF/struts/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
