<tiles-definitions>
	
	<!-- Standard layout with css. -->
	<definition name=".layout" path="/layout/layout.jsp">
		<put name="title" value="LAMS"/>
		<put name="body" value=""/>
		<put name="includeBodyTag" value="true"/>
	</definition>

	<!-- Standard layout for message or tool. This probably needs to be done using
	included header and footer though because tools need this. -->
	<definition name=".activityLayout" path="/layout/activityLayout.jsp">
		<put name="pageTitle" value="LAMS"/>
		<put name="title" value="LAMS"/>
		<put name="body" value=""/>
	</definition>
	
	<definition name=".systemError" extends=".activityLayout" >
		<put name="title" value="System Error Page"/>
		<put name="body" value="/error.jsp" />	
	</definition>
	
	
	<!--  Activity definitions -->
	
	<definition name=".loadToolActivity" extends=".layout">
		<put name="title" value="Loading..."/>
		<put name="body" value="/loadToolActivity.jsp"/>
		<put name="includeBodyTag" value="false"/>
	</definition>
	<definition name=".parallelActivity" extends=".layout">
		<put name="body" value="/parallelActivity.jsp"/>
		<put name="includeBodyTag" value="false"/>
	</definition>
	<definition name=".optionsActivity" extends=".activityLayout">
		<put name="title" value="Optional Activity"/>
		<put name="body" value="/optionsActivity.jsp"/>
	</definition>
	<definition name=".requestDisplay" path="/requestURL.jsp" />
	<definition name=".parallelWait" extends=".activityLayout">
		<put name="title" value="Wait..."/>
		<put name="body" value="/partialCompleted.jsp"/>
	</definition>
	<definition name=".lessonComplete" extends=".activityLayout">
		<put name="title" value="Lesson Complete"/>
		<put name="body" value="/lessonComplete.jsp"/>
	</definition>
	<definition name=".welcome" extends=".activityLayout">
		<put name="title" value="Welcome"/>
		<put name="body" value="/welcome.jsp"/>
	</definition>
	
	<!-- Journal definitions -->
	
	<definition name=".journalDetail" extends=".activityLayout">
		<put name="pageTitle" value="Journal - Detail" />
		<put name="title" value="Journal" />
		<put name="body" value="/notebook/detail.jsp"/>
	</definition>
	<!-- Grouping definitions -->
	<definition name=".grouping" extends=".activityLayout">
		<put name="pageTitle" value="Grouping Result" />
		<put name="title" value="Grouping" />
		<put name="body" value="/grouping/grouping.jsp"/>
	</definition>
	<!-- -->
	<definition name=".gateWaiting" extends=".activityLayout">
		<put name="pageTitle" value="Gate Waiting Page" />
		<put name="title" value="Gate" />
		<put name="body" value="/gate/gateWaiting.jsp"/>
	</definition>
</tiles-definitions>