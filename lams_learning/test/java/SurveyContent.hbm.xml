<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.survey.SurveyContent"
        table="tool_lasr10_survey_content"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="surveyContentId"
            column="survey_content_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SurveyContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="title"
            length="65535"
        />

        <property
            name="instruction"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="instruction"
            length="65535"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="description"
            length="65535"
        />

        <property
            name="dateCreated"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="dateCreated"
            length="150"
        />

        <property
            name="creatorUserId"
            type="long"
            update="true"
            insert="true"
            access="property"
            column="creatorUserId"
            length="20"
        />

        <property
            name="showUser"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="showUser"
            length="1"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="defineLater"
            length="1"
        />

        <property
            name="reusable"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="reusable"
            length="1"
        />

        <property
            name="summary"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="summary"
            length="65535"
        />

        <set
            name="surveyQueContents"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="natural"
        >

              <key
                  column="survey_content_sid"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyQueContent"
              />

        </set>

        <set
            name="surveySessions"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

              <key
                  column="survey_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveySession"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SurveyContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
