<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.pojos.McUploadedFile" 
    table="tl_lamc11_uploadedfile"
>
    <id
        name="submissionId"
        type="java.lang.Long"
        column="submissionId"
    >
	    <generator class="native"/>
    </id>


    <property
        name="uuid"
        type="java.lang.String"
        access="property"
        column="uuid"
        length="255"
    />

   <property
            name="fileOnline"
            type="boolean"
            access="property"
            column="isOnline_File"
   />

   <property
            name="fileName"
            type="java.lang.String"
            access="property"
            column="filename"
   />
   
   <many-to-one
        name="mcContent"
        class="org.lamsfoundation.lams.tool.mc.pojos.McContent"
        not-null="true"        
        cascade="none"
        outer-join="auto"
        update="true"
        insert="true"
        access="property"
    >
        <column
            name="mc_content_id" 
        />
    </many-to-one>

</class>
</hibernate-mapping>
