<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.pojos.McQueUsr" 
    table="tl_lamc11_que_usr"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
		    <generator class="native"/>
    </id>

	<property
        name="queUsrId"
        type="java.lang.Long"
        column="que_usr_id"
        not-null="true"
        length="20"
    >
    </property>


    <property
        name="username"
        type="java.lang.String"
        column="username"
        length="255"
    >
    </property>
    <property
        name="fullname"
        type="java.lang.String"
        column="fullname"
        length="255"
    >
    </property>

   <property
        name="responseFinalised"
        type="boolean"
        access="property"
        column="responseFinalised"
        length="1"        
   />
   
   <property
        name="viewSummaryRequested"
        type="boolean"
        access="property"
        column="viewSummaryRequested"
        length="1"        
   />   

    <property
        name="mcSessionId"
        type="java.lang.Long"
        update="false"
        insert="false"
        access="property"
        column="mc_session_id"
        length="20"
    >
    </property>


    <many-to-one
        name="mcSession"
        class="org.lamsfoundation.lams.tool.mc.pojos.McSession"
        not-null="true"        
        cascade="none"
        outer-join="auto"
        update="true"
        insert="true"
        access="property"
    >
        <column name="mc_session_id" />
    </many-to-one>

   	 <set
            name="mcUsrAttempts"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
              <key
                  column="que_usr_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.mc.pojos.McUsrAttempt"
              />
    </set>

</class>
</hibernate-mapping>
