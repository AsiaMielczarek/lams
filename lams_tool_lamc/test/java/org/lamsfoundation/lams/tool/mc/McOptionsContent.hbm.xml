<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.McOptionsContent" 
    table="tl_lamc11_options_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

    <property
        name="mcQueOptionId"
        type="java.lang.Long"
        column="mc_que_option_id"
        not-null="true"
        length="20"
    >
    </property>
    
   <property
            name="correctOption"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="correct_option"
   />
    
    <property
        name="mcQueOptionText"
        type="java.lang.String"
        column="mc_que_option_text"
        length="250"
    >
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to McQueContent -->
    <many-to-one
        name="mcQueContent"
        class="org.lamsfoundation.lams.tool.mc.McQueContent"
        not-null="true"
    >
        <column name="mc_que_content_id" />
    </many-to-one>
    
    <!-- bi-directional one-to-many association to McUsrAttempt -->
    <set
        name="mcUsrAttempts"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="mc_que_option_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McUsrAttempt"
        />
    </set>

</class>
</hibernate-mapping>
