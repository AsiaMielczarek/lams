<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.McContent" 
    table="tl_lamc11_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

	<property
        name="mcContentId"
        type="java.lang.Long"
        column="mc_content_id"
        not-null="true"
        length="20"
    >
    </property>
    
    <property
        name="title"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"
        column="title"
        length="100"
    />

    <property
        name="instructions"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="instructions"
        length="255"
    />


   <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="define_later"
   />


   <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="run_offline"
   />


    <property
        name="creationDate"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="creation_date"
        length="10"
    />


    <property
        name="updateDate"
        type="java.util.Date"
        update="true"
        insert="true"
        access="property"        
        column="update_date"
        length="10"
    />


   <property
            name="questionsSequenced"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="questions_sequenced"
   />

    <property
        name="usernameVisible"
        type="boolean"
        update="true"
        insert="true"
        access="property"        
        column="username_visible"
        length="1"
    />

    <property
        name="reportTitle"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="report_title"
        length="100"
    />
    

    <property
        name="monitoringReportTitle"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="monitoring_report_title"
        length="100"
    />
 
 
    <property
        name="createdBy"
        type="long"
        update="true"
        insert="true"
        access="property"        
        column="created_by"
        length="20"
    />


    <property
        name="synchInMonitor"
        type="boolean"
        update="true"
        insert="true"
        access="property"        
        column="synch_in_monitor"
        length="1"
    />
    
    <property
        name="contentLocked"
        type="boolean"
        update="true"
        insert="true"
        access="property"        
        column="content_locked"
        length="1"
    />
    
    
    
    <property
        name="offlineInstructions"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="offline_instructions"
        length="65535"
    />
    
    <property
        name="onlineInstructions"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="online_instructions"
        length="65535"
    />
    
    <property
        name="endLearningMessage"
        type="java.lang.String"
        update="true"
        insert="true"
        access="property"        
        column="end_learning_message"
        length="65535"
    />
    

   	 <set
            name="mcQueContents"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="natural"
        >
              <key
                  column="mc_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.mc.McQueContent"
              />
    </set>

	<set
            name="mcSessions"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
              <key
                  column="mc_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.mc.McSession"
              />

    </set>

</class>
</hibernate-mapping>
