<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.lamsfoundation.lams.tool.mc.McQueContent" 
    table="tl_lamc11_que_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

    <property
        name="mcQueContentId"
        type="java.lang.Long"
        column="mc_que_content_id"
        not-null="true"
        length="20"
    >
    </property>
    
    <property
        name="question"
        type="java.lang.String"
        column="question"
        length="255"
    >
    </property>
    
    <property
        name="displayOrder"
        type="java.lang.Integer"
        column="display_order"
        length="5"
    >
    </property>
    
    <many-to-one
        name="mcContent"
        class="org.lamsfoundation.lams.tool.mc.McContent"
	    cascade="none"
	    outer-join="auto"
	    update="true"
	    insert="true"
	    access="property"
        not-null="true"
    >
        <column name="mc_content_id" />
    </many-to-one>
    
    
    <!-- bi-directional one-to-many association to TlLamc11OptionsContent -->
    <set
        name="mcOptionsContents"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="mc_que_content_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McOptsContent"
        />
    </set>
    
    
    <set
        name="mcUsrAttempts"
        lazy="false"
        inverse="true"
		cascade="none"
	>

        <key>
            <column name="mc_que_content_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McUsrAttempt"
        />
    </set>
    
    
    
</class>
</hibernate-mapping>
