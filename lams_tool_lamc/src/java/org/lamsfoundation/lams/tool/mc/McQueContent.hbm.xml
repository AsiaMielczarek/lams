<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.mc.McQueContent" 
    table="tl_lamc11_que_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

    <property
        name="mcQueContentId"
        type="java.lang.Long"
        column="mc_que_content_id"
        not-null="true"
        length="20"
    >
    </property>
    
    <property
        name="question"
        type="java.lang.String"
        column="question"
        length="255"
    >
    </property>
    
    <property
        name="displayOrder"
        type="java.lang.Integer"
        column="display_order"
        length="5"
    >
    </property>
    
    <property
	    name="mcContentId"
	    type="java.lang.Long"
	    update="false"
	    insert="false"
	    access="property"
	    column="mc_content_id"
	    length="65535"
	/>
    
   

    <many-to-one
        name="mcContent"
        class="org.lamsfoundation.lams.tool.mc.McContent"
        not-null="true"
    >
        <column name="mc_content_id" />
    </many-to-one>
    


    <set
        name="mcUsrAttempts"
        lazy="true"
        inverse="true"
		cascade="none"
    >

        <key>
            <column name="mc_que_content_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McUsrAttempt"
        />
    </set>


    <set
        name="mcOptionsContents"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="mc_que_content_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McOptionsContent"
        />
    </set>

</class>
</hibernate-mapping>
