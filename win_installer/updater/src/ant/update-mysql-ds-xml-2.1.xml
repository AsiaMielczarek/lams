<?xml version="1.0" encoding="UTF-8"?>
<project name="update-mysql-ds-xml-201.xml" basedir="."> 
    
    <property file="update-mysql-ds.properties" />
    
    <target name="copy-mysql-ds.xml-2.1" description="2.1 SPECIFIC to update mysql-ds.xml">
        <copy overwrite="yes" todir="${DEPLOYDIR}">
            <fileset dir=".">
                <include name="mysql-ds.xml" />
            </fileset>
            <filterset>
                <filter token="DB_NAME" value="${DB_NAME}" />
                <filter token="DB_USER" value="${DB_USER}" />
                <filter token="DB_PASS" value="${DB_PASS}" />
                <filter token="MYSQL_HOST" value="${MYSQL_HOST}" />
                <filter token="MYSQL_PORT" value="${MYSQL_PORT}" />
            </filterset>
        </copy>
    </target>
</project>