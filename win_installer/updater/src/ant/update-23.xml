<project name="update-23.xml" basedir=".">

	<target name="update-mysql-ds"
		description="Update mysql-ds.xml to have only one datasource">
		<copy overwrite="yes" todir="${DEPLOYDIR}">
			<fileset dir="${TEMP}/lams">
				<include name="mysql-ds.xml" />
			</fileset>
			<filterset>
				<filter token="DB_NAME" value="${DB_NAME}" />
				<filter token="DB_USER" value="${DB_USER}" />
				<filter token="DB_PASS" value="${DB_PASS}" />
				<filter token="MYSQL_HOST" value="${MYSQL_HOST}" />
				<filter token="MYSQL_PORT" value="${MYSQL_PORT}" />
			</filterset>
		</copy>
	</target>
	
	<target name="update-lams-tool-table"  description="Updates the lams tool table so new tools can deploy" >
        <sql driver="com.mysql.jdbc.Driver" 
            classpath="${DEPLOYDIR}/lams.ear/mysql-connector-java-5.0.8-bin.jar" 
            url="jdbc:mysql://${MYSQL_HOST}:${MYSQL_PORT}/${DB_NAME}?autoReconnect=true" 
            userid="${DB_USER}" 
            password="${DB_PASS}"
            encoding="utf8"
            onerror="abort">
            <transaction src="${TEMP}/lams/update23_lamstool.sql" />
        </sql>
    </target>
	
</project>