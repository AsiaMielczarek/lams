<?xml version="1.0" encoding="UTF-8"?>

<project name="revert-db" basedir=".">

	<property file="revert.properties" />
	<target name="revert-db">
		<sql driver="com.mysql.jdbc.Driver" 
			classpath="${EARDIR}/mysql-connector-java-3.1.12-bin.jar" 
			url="jdbc:mysql://localhost/${DB_NAME}?characterEncoding=UTF-8" 
			userid="${DB_USER}" 
			password="${DB_PASS}"
			encoding="utf8"
			keepformat="true"
			>
			<transaction src="${BACKUP_DIR}/dump.sql" />
		</sql>
	</target>
	
	<target name="copy-files" >
		<!--
        <copy todir="${INSTDIR}"  overwrite="true">
            <fileset dir="${BACKUP_DIR}">
                <exclude name="**/*.java"/>
            </fileset>
        </copy>
        
        -->
		
        <copy todir="${INSTDIR}" overwrite="true" verbose="true">
            <fileset dir="${BACKUP_DIR}" excludes="lams-restore.exe"/>
        </copy>
    </target>
	
</project>