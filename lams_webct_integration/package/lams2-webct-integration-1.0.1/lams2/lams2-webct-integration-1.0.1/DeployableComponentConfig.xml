<?xml version="1.0" encoding="UTF-8"?>
<deployablecomponents>
 <!-- Out Bound Deployable Component Config XML File -->
 <!-- Add components as shown in the following <component> block below -->

    <component>
        <version>1.0.1</version>
        <powerlinks-version>1.0</powerlinks-version>
        <id>lams.integration.module</id>
        <!-- valid types include sso siapi and proxytools -->
        <type>sso</type>
        <classname>org.lamsfoundation.integration.webct.LamsModule</classname>
        <author>Luke Foxton</author>
        <description>LAMS Integration Module</description>
        <settings-structure>
            <settings-group name="lams_integration_module"
                            type="service"
                            label="LAMS Integration Module">

				<!-- REQUIRED ELEMENTS -->
				<setting-element name="controlflag"
						 label="security.authNModule.controlFlag"
						 data-type="String"
						 presentation-type="ComboBox"
						 inheritable="true"
						 optional="false"
						 read-only="false"
						 >
						 <setting-value key="sufficient" default="true"  label="security.authNModule.controlFlag.sufficient"/>
						 <setting-value key="required" default="false"  label="security.authNModule.controlFlag.required"/>
						 <setting-value key="requisite" default="false"  label="security.authNModule.controlFlag.requisite"/>
						 <setting-value key="optional" default="false"  label="security.authNModule.controlFlag.optional"/>
				</setting-element>

				<setting-element name="order"
						 label="security.authNModule.order"
						 data-type="Integer"
						 presentation-type="TextField"
						 inheritable="true"
						 optional="false"
						 read-only="false"
						 default-value="1">
				</setting-element>

				<setting-element name="mode"
						 label="security.authNModule.mode"
						 data-type="String"
						 presentation-type="ComboBox"
						 inheritable="true"
						 optional="false"
						 read-only="true"
						 >
					<setting-value key="outgoing" default="true"  label="security.authNModule.mode.outgoing"/>
					<setting-value key="incoming" default="false"  label="security.authNModule.mode.incoming"/>
				</setting-element>
			
				<setting-element name="operationalTimeout"
						 label="security.authNModule.operationalTimeout"
						 data-type="Integer"
						 presentation-type="TextField"
						 inheritable="true"
						 optional="false"
						 read-only="false"
						 default-value="10"
						 not-applicable-lc-types="Division;Domain;Campus;Course;Section">
				</setting-element>
				
				
				<setting-element name="openInNewWindow"
					 label="security.authNModule.openInNewWindow"
					 data-type="Boolean"
					 presentation-type="RadioGroup"
					 inheritable="true"
					 optional="false"
					 read-only="false"
					 not-applicable-lc-types="Division;Domain;Campus;Course;Section">
					 <setting-value key="true" default="false" label="true"/>
					 <setting-value key="false" default="true" label="false"/>
				</setting-element>
		
		<!-- MODULE-SPECIFIC ELEMENTS -->	

				<setting-element name="dbUrl" 
								 label="Database JDBC Url" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="jdbc:mysql://localhost:3306/lams?characterEncoding=utf8" />

				<setting-element name="dbDriver" 
								 label="Database driver jar" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false"
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="com.mysql.jdbc.Driver" />
 
				<setting-element name="dbTable" 
								 label="Database table name" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false"
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="webct_lams_lesson" />

				<setting-element name="dbUser" 
								 label="Database User" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="webct_lams_user" />
				
				<setting-element name="dbPass" 
								 label="Database User Password" 
								 data-type="String" 
								 presentation-type="Password" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false"
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="" />

				<setting-element name="lamsServerUrl" 
								 label="LAMS Server URL" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="http://localhost:8080/lams/" />

				
				<setting-element name="serverId" 
								 label="LAMS Server ID" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="webctlams" />
								 
				<setting-element name="secretKey" 
								 label="LAMS Server Secret Key" 
								 data-type="String" 
								 presentation-type="Password" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="" />
								 
								 
				<setting-element name="webctRequestSource" 
								 label="WebCt Request Source" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false"
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="Blackboard CE" />
								 
				<setting-element name="imagesUrl" 
								 label="Images Url" 
								 data-type="String" 
								 presentation-type="TextField" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false"
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 default-value="http://localhost:8080/lams/images/treeicons/" />
							 
				<setting-element name="authorRoles" 
								 label="LAMS Author Roles" 
								 data-type="String_Array" 
								 presentation-type="CheckList" 
								 inheritable="true" 
								 optional="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 read-only="false">
					 				<setting-value key="CDES" default="true" label="Course Designer"/>
					 				<setting-value key="CINS" default="false" label="Course Instructor"/>
					 				<setting-value key="SIND" default="false" label="Designer Instructor"/>
					 				<setting-value key="SDES" default="true" label="Section Designer"/>
					 				<setting-value key="SINS" default="false" label="Section Instructor"/>
					 				<setting-value key="STEA" default="false" label="Teaching Assistant"/>
					 				<setting-value key="SMEN" default="false" label="Mentor"/>		
				</setting-element>
				
				<setting-element name="monitorRoles" 
								 label="LAMS Monitoring Roles" 
								 data-type="String_Array" 
								 presentation-type="CheckList" 
								 inheritable="true" 
								 optional="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 read-only="false">
					 				<setting-value key="CDES" default="false" label="Course Designer"/>
					 				<setting-value key="CINS" default="true" label="Course Instructor"/>
					 				<setting-value key="SIND" default="false" label="Designer Instructor"/>
					 				<setting-value key="SDES" default="false" label="Section Designer"/>
					 				<setting-value key="SINS" default="true" label="Section Instructor"/>
					 				<setting-value key="STEA" default="true" label="Teaching Assistant"/>
					 				<setting-value key="SMEN" default="false" label="Mentor"/>	
				</setting-element>	
							 
				<setting-element name="learnerRoles" 
								 label="LAMS Learner Roles" 
								 data-type="String_Array" 
								 presentation-type="CheckList" 
								 inheritable="true" 
								 optional="false" 
								 read-only="false" 
								 not-applicable-lc-types="Division;Domain;Campus;Course;Section"
								 >
								 	<setting-value key="SAUD" default="true" label="Auditor"/>
					 				<setting-value key="CDES" default="false" label="Course Designer"/>
					 				<setting-value key="CINS" default="true" label="Course Instructor"/>
					 				<setting-value key="SIND" default="false" label="Designer Instructor"/>
					 				<setting-value key="SDES" default="false" label="Section Designer"/>
					 				<setting-value key="SINS" default="true" label="Section Instructor"/>
					 				<setting-value key="SSTU" default="true" label="Student"/>
					 				<setting-value key="STEA" default="true" label="Teaching Assistant"/>
					 				<setting-value key="SMEN" default="false" label="Mentor"/>	
				</setting-element>
            
            </settings-group>
        </settings-structure>
    </component>

</deployablecomponents>
   







