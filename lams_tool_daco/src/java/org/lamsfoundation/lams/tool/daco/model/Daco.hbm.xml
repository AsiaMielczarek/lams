<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.daco.model.Daco"
        table="tl_ladaco10_contents"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Daco.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.daco.model.DacoUser"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="DacoToUser"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="onlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="online_instructions"
        />

        <property
            name="offlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="offline_instructions"
        />

        <set
            name="attachments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="content_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.daco.model.DacoAttachment"
            />

        </set>

        <set
            name="dacoQuestions"
            lazy="false"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="uid asc"
            outer-join="true"
        >

            <key
                column="content_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.daco.model.DacoQuestion"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="minRecords"
            type="java.lang.Short"
            update="true"
            insert="true"
            column="min_records"
        />

        <property
            name="maxRecords"
            type="java.lang.Short"
            update="true"
            insert="true"
            column="max_records"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Daco.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
