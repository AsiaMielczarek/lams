<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmissionDetails"
        table="tl_lasbmt11_submission_details"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="submissionID"
            column="submission_id"
            type="java.lang.Long"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmissionDetails.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="filePath"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="filePath"
            length="250"
        />

        <property
            name="fileDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="fileDescription"
            length="250"
        />

        <property
            name="dateOfSubmission"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="date_of_submission"
            length="19"
        />

        <property
            name="uuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="uuid"
            length="20"
        />

        <property
            name="versionID"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="version_id"
            length="20"
        />

        <many-to-one
            name="report"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesReport"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="report_id" 
            />
        </many-to-one>

        <property
            name="userID"
            type="java.lang.Long"
            update="true"
            insert="true"
            access="property"
            column="user_id"
            length="20"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmissionDetails.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
