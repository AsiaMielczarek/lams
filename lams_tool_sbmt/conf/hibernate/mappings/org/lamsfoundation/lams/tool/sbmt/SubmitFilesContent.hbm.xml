<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmitFilesContent"
        table="tl_lasbmt11_content"
    >

        <id
            name="contentID"
            column="content_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmitFilesContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="64"
            not-null="true"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="instructions"
            length="64"
        />

        <set
            name="toolSession"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="content_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesSession"
            />

        </set>

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="defineLater"
            length="1"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="runOffline"
            length="1"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmitFilesContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
