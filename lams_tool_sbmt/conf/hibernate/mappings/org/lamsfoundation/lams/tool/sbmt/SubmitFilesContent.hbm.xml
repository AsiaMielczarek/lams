<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmitFilesContent"
        table="tl_lasbmt11_content"
    >

        <id
            name="contentID"
            column="content_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmitFilesContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="64"
            not-null="true"
        />

        <property
            name="instruction"
            type="text"
            update="true"
            insert="true"
            column="instruction"
        />

        <set
            name="toolSession"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="content_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesSession"
            />

        </set>

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
            not-null="true"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
            length="1"
            not-null="true"
        />

        <property
            name="offlineInstruction"
            type="text"
            update="true"
            insert="true"
            column="offline_instruction"
        />

        <property
            name="onlineInstruction"
            type="text"
            update="true"
            insert="true"
            column="online_instruction"
        />

        <property
            name="runOfflineInstruction"
            type="text"
            update="true"
            insert="true"
            column="run_offline_instruction"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <set
            name="instructionFiles"
            lazy="true"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="content_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.sbmt.InstructionFiles"
            />

        </set>

        <property
            name="lockOnFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmitFilesContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
