<!-- ========== Action Mapping Definitions ============================== -->
		<action path="/definelater" type="org.lamsfoundation.lams.tool.sbmt.web.AuthoringAction" 
				name="SbmtAuthoringForm" 
				scope="request" 
				input="/authoring/definelater.jsp"
				parameter="dispatch" 
				validate="false">
			<forward name="success" path="/authoring/definelater.jsp"/>
			<forward name="forbidden" path="/authoring/definelaterforbid.jsp"/>
		</action>
		
		
		<!--  ========= Reflection =============== -->
		<action path="/learning/newReflection"
			type="org.lamsfoundation.lams.tool.sbmt.web.ReflectAction"
			name="reflectionForm" 
			validate="false" 
			parameter="newReflection" 
			input="/learner/sbmtlearner.jsp" 
			scope="request">
			<forward name="success" path="/learner/notebook.jsp" />
		</action>
		
		<action path="/learning/submitReflection"
			type="org.lamsfoundation.lams.tool.sbmt.web.ReflectAction"
			name="reflectionForm" 
			validate="false" 
			input="/learner/notebook.jsp"
			parameter="submitReflection" 
			scope="request">
			<forward name="success" path="/learner.do?method=finish" />
		</action>

