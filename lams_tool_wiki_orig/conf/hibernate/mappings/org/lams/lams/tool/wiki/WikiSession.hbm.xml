<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lams.lams.tool.wiki.WikiSession"
        table="tl_lawiki10_session"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
            unsaved-value="0"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-WikiSession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="wikiContent"
            class="org.lams.lams.tool.wiki.WikiContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="wiki_content_uid" 
            />
        </many-to-one>

        <property
            name="wikiSessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="wiki_session_id"
            length="20"
            not-null="true"
        />

        <property
            name="wikiSessionName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="wiki_session_name"
            length="255"
            not-null="true"
        />

        <property
            name="sessionEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_end_date"
            length="19"
        />

        <property
            name="sessionStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_start_date"
            length="19"
        />

        <property
            name="sessionStatus"
            type="java.lang.String"
            update="true"
            insert="true"
            column="session_status"
            length="100"
        />

        <set
            name="wikiUsers"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="wiki_session_uid"
            >
            </key>

            <one-to-many
                  class="org.lams.lams.tool.wiki.WikiUser"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-WikiSession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
