<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="wikiMessageService" class="org.lamsfoundation.lams.util.MessageService" singleton="true">
		<property name="messageSource">
			<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
				<property name="basename"><value>org.lamsfoundation.lams.tool.wiki.ApplicationResources</value></property>
			</bean>
		</property>
	</bean>
    <!-- Hibernate SessionFactory -->
    <bean id="wikiSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>

        <!-- Must references all OR mapping files. -->
        <property name="mappingResources">
            <list>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/Wiki.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/Message.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/Attachment.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/WikiUser.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/WikiReport.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/WikiToolSession.hbm.xml</value>
               <value>org/lamsfoundation/lams/tool/wiki/persistence/MessageSeq.hbm.xml</value>
            </list>
        </property>
    </bean>

    <!-- core beans -->
    <bean id="wikiDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>
    <bean id="wikiUserDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiUserDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>

   <bean id="wikiAttachmentDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiAttachmentDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>

   <bean id="wikiMessageDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiMessageDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>

   <bean id="wikiMessageSeqDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiMessageSeqDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>
   <bean id="wikiToolSessionDao" class="org.lamsfoundation.lams.tool.wiki.persistence.WikiToolSessionDao">
        <property name="sessionFactory">
            <ref local="wikiSessionFactory"/>
        </property>
    </bean>

    <!-- Managers -->
	<bean id="wikiToolContentHandler" class="org.lamsfoundation.lams.tool.wiki.util.WikiToolContentHandler">
	 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean> 
	
	<bean id="wikiOutputFactory" class="org.lamsfoundation.lams.tool.wiki.service.WikiOutputFactory">
 		<property name="toolMessageService"><ref bean="wikiMessageService"/></property>
 	</bean>
	
    <bean id="wikiManagerTarget" class="org.lamsfoundation.lams.tool.wiki.service.WikiService">
        <property name="wikiDao">
            <ref local="wikiDao"/>
        </property>
        <property name="wikiUserDao">
            <ref local="wikiUserDao"/>
        </property>
        <property name="wikiAttachmentDao">
            <ref local="wikiAttachmentDao"/>
        </property>
        <property name="wikiMessageDao">
            <ref local="wikiMessageDao"/>
        </property>
        <property name="wikiMessageSeqDao">
            <ref local="wikiMessageSeqDao"/>
        </property>
        <property name="wikiToolSessionDao">
            <ref local="wikiToolSessionDao"/>
        </property>
        <property name="wikiToolContentHandler">
            <ref local="wikiToolContentHandler"/>
        </property>
        <property name="repositoryService">
            <ref bean="repositoryService"/>
        </property>
   		<property name="toolService">
   			<ref bean="lamsToolService"/>
   		</property>
   		<property name="learnerService">
   			<ref bean="learnerService"/>
   		</property>
   		<property name="userManagementService">
   			<ref bean="userManagementService"/>
   		</property>
   		<property name="exportContentService">
   			<ref bean="exportToolContentService"/>
   		</property>
   		<property name="auditService"><ref bean="auditService"/></property>
   		<property name="messageService"><ref bean="wikiMessageService"/></property>
  		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
  		<property name="wikiOutputFactory"><ref local="wikiOutputFactory"/></property>
    </bean>

    <bean id="wikiService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
        <property name="target">
            <ref local="wikiManagerTarget"/>
        </property>
        <property name="proxyTargetClass">
            <value>false</value>
        </property>
        <property name="transactionAttributes">
            <props>
                <prop key="create*">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="update*">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="delete*">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                
                <prop key="replyTopic">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="releaseMarksForSession">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="finishUserSession">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <!--  Tool Content Manager and Tool Session Manager calls -->
                <prop key="copyToolContent">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="removeToolContent">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="leaveToolSession">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
                <prop key="removeToolSession">PROPAGATION_REQUIRED,-java.lang.Exception</prop>                
                <prop key="cloneContentTopics">PROPAGATION_REQUIRED,-java.lang.Exception</prop>                
                
                <prop key="importToolContent">PROPAGATION_REQUIRED,-java.lang.Exception</prop>                
                <prop key="exportToolContent">PROPAGATION_REQUIRED,-java.lang.Exception</prop>                
				<prop key="import102ToolContent">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
            </props>
        </property>
    </bean>

</beans>
