<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.wiki.persistence.Message"
        table="tl_lawiki10_message"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Message.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="lastReplyDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="last_reply_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.wiki.persistence.WikiUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <many-to-one
            name="modifiedBy"
            class="org.lamsfoundation.lams.tool.wiki.persistence.WikiUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="modified_by"
        />

        <property
            name="subject"
            type="java.lang.String"
            update="true"
            insert="true"
            column="subject"
        />

        <property
            name="body"
            type="text"
            update="true"
            insert="true"
            column="body"
        />

        <property
            name="isAuthored"
            type="boolean"
            update="true"
            insert="true"
            column="is_authored"
        />

        <property
            name="isAnonymous"
            type="boolean"
            update="true"
            insert="true"
            column="is_anonymous"
        />

        <many-to-one
            name="toolSession"
            class="org.lamsfoundation.lams.tool.wiki.persistence.WikiToolSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="wiki_session_uid"
        />

        <many-to-one
            name="parent"
            class="org.lamsfoundation.lams.tool.wiki.persistence.Message"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="parent_uid"
        />

        <set
            name="attachments"
            table="ATTACHMENT"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="message_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.persistence.Attachment"
            />

        </set>

        <many-to-one
            name="wiki"
            class="org.lamsfoundation.lams.tool.wiki.persistence.Wiki"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="wiki_uid"
        />

        <property
            name="replyNumber"
            type="int"
            update="true"
            insert="true"
            column="reply_number"
        />

        <property
            name="hideFlag"
            type="boolean"
            update="true"
            insert="true"
            column="hide_flag"
        />

        <many-to-one
            name="report"
            class="org.lamsfoundation.lams.tool.wiki.persistence.WikiReport"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="report_id"
        />

        <set
            name="sessionClones"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="authored_parent_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.persistence.Message"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Message.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
