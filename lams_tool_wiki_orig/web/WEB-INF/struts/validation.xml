<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
  	<global>
		<constant>
			<constant-name>datePattern</constant-name>
			<constant-value>yyyy-MM-dd</constant-value>
		</constant>
	</global>

  <formset>
  	<form name = "wikiForm">
			<field property="wiki.title" depends="maxlength">
				<arg0 key="wiki.label.title"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
					<var>
						<var-name>maxlength</var-name>
						<var-value>50</var-value>
					</var>
			</field>
    </form>

	<form name = "messageForm">
			<field property="message.subject" depends="required, maxlength">
				<arg0 key="message.label.wikiTitle"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
					<var>
						<var-name>maxlength</var-name>
						<var-value>50</var-value>
					</var>
			</field>
            <field property="message.body" depends="required">
				<arg0 key="message.label.pageContent"/>
			</field>

		</form>

  </formset>
</form-validation>
