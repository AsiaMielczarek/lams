<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="WikiMonitoringForm"
      type="org.lams.lams.tool.wiki.web.WikiMonitoringForm"
    />
    <form-bean
      name="WikiLearnerForm"
      type="org.lams.lams.tool.wiki.web.WikiLearnerForm"
    />
    <form-bean
      name="WikiExportForm"
      type="org.lams.lams.tool.wiki.web.WikiExportForm"
    />
    <form-bean
      name="WikiAuthoringForm"
      type="org.lams.lams.tool.wiki.web.WikiAuthoringForm"
    />

    <!--
         If you have non XDoclet forms, define them in a file called struts-forms.xml and
         place it in your merge directory.
    -->
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
    key="error.system"
    path="/error.jsp"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
 	<forward name="forwardToAuthorPage"
          path="/authoring.do"/>
 </global-forwards> 

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/starter/learner"
      type="org.lams.lams.tool.wiki.web.WikiLearnerStarterAction"
      name="WikiLearnerForm"
      scope="request"
      parameter="mode"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayLearnerContent"
        path=".learnerContent"
        redirect="false"
      />
      <forward
        name="displayMessage"
        path=".message"
        redirect="false"
      />
      <forward
        name="defineLater"
        path=".defineLater"
        redirect="false"
      />
    </action>
    <action
      path="/clearsession"
      type="org.lams.lams.tool.wiki.web.ClearSessionAction"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/authoring"
      type="org.lams.lams.tool.wiki.web.WikiAuthoringAction"
      name="WikiAuthoringForm"
      scope="request"
      input="/author_page.jsp"
      parameter="method"
      unknown="false"
      validate="true"
    >
      <forward
        name="authoringContent"
        path="/authoring/authoring.jsp"
        redirect="false"
      />
      <forward
        name="displayMessage"
        path=".message"
        redirect="false"
      />
    </action>
    <action
      path="/exportPortfolio"
      type="org.lams.lams.tool.wiki.web.WikiExportAction"
      name="WikiExportForm"
      scope="request"
      parameter="mode"
      unknown="false"
      validate="false"
    >
      <forward
        name="exportPortfolio"
        path="/exportPortfolio.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/monitoring"
      type="org.lams.lams.tool.wiki.web.WikiMonitoringAction"
      name="WikiMonitoringForm"
      scope="request"
      input=".monitoringContent"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="monitorPage"
        path="/monitoring/monitoring.jsp"
        redirect="false"
      />
      <forward
        name="monitorReflectionPage"
        path=".monitorReflectionPage"
        redirect="false"
      />
    </action>
    <action
      path="/learner"
      type="org.lams.lams.tool.wiki.web.WikiLearnerAction"
      name="WikiLearnerForm"
      scope="request"
      input=".learnerContent"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayLearnerContent"
        path=".learnerContent"
        redirect="false"
      />
      <forward
        name="reflectOnActivity"
        path=".reflectOnActivity"
        redirect="false"
      />
    </action>

    <!-- If you have non XDoclet actions, define them in a file called struts-actions.xml and place it in your merge directory. -->
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

  <message-resources parameter="org.lams.lams.tool.wiki.ApplicationResources" />

  <!-- ===================== Plugin Definition  ======================== -->
<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
