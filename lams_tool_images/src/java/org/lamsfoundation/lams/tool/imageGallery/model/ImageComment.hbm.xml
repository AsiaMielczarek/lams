<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.imageGallery.model.ImageComment"
        table="tl_laimag10_image_comment"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ImageComment.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.imageGallery.model.ImageGalleryUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="comment"
            type="text"
            update="true"
            insert="true"
            column="comment"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ImageComment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
