<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.imageGallery.model.ImageGalleryItem"
        table="tl_laimag10_imageGallery_item"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ImageGalleryItem.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.imageGallery.model.ImageGalleryUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="createByAuthor"
            type="boolean"
            update="true"
            insert="true"
            column="create_by_author"
        />

        <property
            name="hide"
            type="boolean"
            update="true"
            insert="true"
            column="is_hide"
        />

        <property
            name="originalFileUuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="original_file_uuid"
        />

        <property
            name="mediumFileUuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="medium_file_uuid"
        />

        <property
            name="thumbnailFileUuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="thumbnail_file_uuid"
        />

        <property
            name="fileVersionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="file_version_id"
        />

        <property
            name="fileType"
            type="java.lang.String"
            update="true"
            insert="true"
            column="file_type"
        />

        <property
            name="fileName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="file_name"
        />

        <set
            name="comments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date asc"
        >

            <key
                column="imageGallery_item_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.imageGallery.model.ImageComment"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ImageGalleryItem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
