<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.survey.SurveyAnsContent"
        table="tool_lasr10_survey_ans_content"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="surveyAnsContentId"
            column="survey_ans_content_id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SurveyAnsContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="answerEntry"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="answer_entry"
            length="255"
        />

        <property
            name="displayOrder"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="dispaly_order"
            length="11"
        />

        <set
            name="surveyUsrResps"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="survey_ans_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyUsrResp"
              />

        </set>

        <many-to-one
            name="surveyQueContent"
            class="org.lamsfoundation.lams.tool.survey.SurveyQueContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="survey_que_content_id" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SurveyAnsContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
