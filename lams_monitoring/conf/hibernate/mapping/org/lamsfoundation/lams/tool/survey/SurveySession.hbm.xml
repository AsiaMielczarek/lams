<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.survey.SurveySession"
        table="tool_lasr10_survey_session"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="surveySessionId"
            column="survey_session_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SurveySession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="sessionStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="session_start_date"
            length="10"
        />

        <property
            name="sessionEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            access="property"
            column="session_end_date"
            length="10"
        />

        <property
            name="sessionStatus"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="session_status"
            length="128"
        />

        <many-to-one
            name="surveyContent"
            class="org.lamsfoundation.lams.tool.survey.SurveyContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="survey_content_id" 
            />
        </many-to-one>

        <set
            name="surveyQueUsrs"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

              <key
                  column="survey_session_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyQueUsr"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SurveySession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
