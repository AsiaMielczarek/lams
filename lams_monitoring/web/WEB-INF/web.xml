	<servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
</servlet-mapping>

   <servlet-mapping>
      <servlet-name>performChosenGrouping</servlet-name>
      <url-pattern>/monitoring/performChosenGrouping</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
      <servlet-name>createLesson</servlet-name>
      <url-pattern>/monitoring/createLesson</url-pattern>
   </servlet-mapping>

   <session-config>
      <session-timeout>120</session-timeout>
   </session-config>

