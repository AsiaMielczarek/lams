<global-forwards>
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.monitoring.web.MonitoringAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.monitor"
        type="org.lamsfoundation.lams.monitoring.service.MonitoringServiceException"
        handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="scheduler"
        path="/TestScheduler.jsp"
        redirect="false"
      />
      <forward
        name="success"
        path="/index.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/gate"
      type="org.lamsfoundation.lams.monitoring.web.GateAction"
      name="GateForm"
      scope="session"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.monitor"
        type="org.lamsfoundation.lams.monitoring.service.MonitoringServiceException"
        handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="viewSynchGate"
        path=".viewSynchGate"
        redirect="false"
      />
      <forward
        name="viewPermissionGate"
        path=".viewPermissionGate"
        redirect="false"
      />
      <forward
        name="viewScheduleGate"
        path=".viewScheduleGate"
        redirect="false"
      />
    </action>
    <action
      path="/dummy"
      type="org.lamsfoundation.lams.monitoring.web.DummyMonitoringAction"
      name="DummyForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.monitor"
        type="org.lamsfoundation.lams.monitoring.service.MonitoringServiceException"
        handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="detail"
        path="/dummyDetail.jsp"
        redirect="false"
      />
      <forward
        name="start"
        path="/dummyStart.jsp"
        redirect="false"
      />
      <forward
        name="started"
        path="/dummyStarted.jsp"
        redirect="false"
      />
      <forward
        name="control"
        path="/dummyControlFrame.jsp"
        redirect="false"
      />
    </action>

    <!-- If you have non XDoclet actions, define them in a file called struts-actions.xml and place it in your merge directory. -->
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

