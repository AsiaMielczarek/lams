<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.survey.SurveyQueContent"
        table="tool_lasr10_survey_que_content"
        dynamic-update="false"
        dynamic-insert="false"
        select-before-update="false"
        optimistic-lock="version"
    >

        <id
            name="surveyQueContentId"
            column="survey_que_content_id"
            type="java.lang.Long"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SurveyQueContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="question"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="question"
            length="65535"
        />

        <property
            name="displayOrder"
            type="int"
            update="true"
            insert="true"
            access="property"
            column="display_order"
            length="11"
        />

        <property
            name="isOptional"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="isOptional"
            length="1"
        />

        <property
            name="isTextBoxEnabled"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="isTextBoxEnabled"
            length="1"
        />

        <many-to-one
            name="surveyContent"
            class="org.lamsfoundation.lams.tool.survey.SurveyContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="survey_content_sid" 
            />
        </many-to-one>

        <many-to-one
            name="surveyQueType"
            class="org.lamsfoundation.lams.tool.survey.SurveyQueType"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="question_type_id" 
            />
        </many-to-one>

        <set
            name="surveyUsrResps"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="natural"
        >

              <key
                  column="survey_que_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyUsrResp"
              />

        </set>

        <set
            name="surveyAnsContents"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="natural"
        >

              <key
                  column="survey_que_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyAnsContent"
              />

        </set>

        <set
            name="surveyQueUsrs"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

              <key
                  column="survey_que_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyQueUsr"
              />

        </set>

        <many-to-one
            name="parentQuestion"
            class="org.lamsfoundation.lams.tool.survey.SurveyQueContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="parent_que_content_id" 
            />
        </many-to-one>

        <set
            name="subQuestions"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="natural"
        >

              <key
                  column="parent_que_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.survey.SurveyQueContent"
              />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SurveyQueContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
