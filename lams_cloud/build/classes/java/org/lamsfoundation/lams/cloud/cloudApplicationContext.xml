<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="cloudMessageService" class="org.lamsfoundation.lams.util.MessageService" >
		<property name="messageSource">
			<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
				<property name="basename"><value>org.lamsfoundation.lams.cloud.ApplicationResources</value></property>
			</bean>
		</property>										
	</bean>

	<bean id="cloudServiceTarget" class="org.lamsfoundation.lams.cloud.service.CloudService" >
		<property name="toolService"><ref bean="lamsCoreToolService"/></property> 	
		<property name="lessonService"><ref bean="lessonService"/></property> 
		<property name="userService"><ref bean="userManagementService"/></property>	
		<property name="gradebookDAO"><ref bean="gradebookDAO"/></property> 	

		<property name="baseDAO"><ref bean="baseDAO"/></property>
		<property name="activityDAO"><ref bean="activityDAO"/></property>
		<property name="messageService"><ref bean="cloudMessageService"/></property>
	</bean>
	
	<bean id="cloudService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean" >
		<property name ="transactionManager"><ref bean ="transactionManager"/></property>
		<property name ="target"><ref bean="cloudServiceTarget"/></property>
		<property name="transactionAttributes">
			<props>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>
</beans>
