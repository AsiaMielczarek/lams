<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.eucm.lams.tool.eadventure.model.EadventureCondition"
        table="tl_eueadv10_condition"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-EadventureCondition.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <set
            name="eadListExpression"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id"
        >

            <key
                column="condition_uid"
            >
            </key>

            <one-to-many
                  class="org.eucm.lams.tool.eadventure.model.EadventureExpression"
            />

        </set>

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <property
            name="eadventure_uid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="eadventure_uid"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-EadventureCondition.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
