<?xml version="1.0" encoding="UTF-8"?>

<project name="Unix-Updater-Build-Script" default="build" basedir=".">

 	<property name="VERSION" value="2.3.5" />
 	<property name="PACKAGE-ROOT" value="build/lams-unix-updater-${VERSION}" />
	<property name="LAMS_PROJECT_ROOT" value="/usr/local/lams2/" />
	<property name="TOOLS" value="tools" />
	<property name="db.username" value="lams" />
	<property name="db.password" value="lamsdemo" />
	<property name="db.name" value="lams" />
	
	<description>
		Unix updater build script for lams ${VERSION}
	</description>
	
	<target name="dump-db" description="Dump full LAMS database contents.">
		<exec executable="mysqldump" 
		     output="${basedir}/database/dump.sql" failonerror="true">
		      <arg line="-u${db.username}" />
		      <arg line="--password=${db.password}" />
		      <arg line="${db.name}" />
		</exec>
	</target>
	
	<target name="build" depends="clean, compile-java" description="Build all sources.">

		<!-- create the necessary directories -->
		<mkdir dir="${PACKAGE-ROOT}" /> 
		<mkdir dir="${PACKAGE-ROOT}/log" /> 
		<mkdir dir="${PACKAGE-ROOT}/bin" />
		<mkdir dir="${PACKAGE-ROOT}/docs" /> 
		
		<!-- copy files to new created folders -->
		<exec executable="cp" failonerror="true">
			<arg line="-r" />
		    <arg line="ant" />
		    <arg line="ant-scripts" />
		    <arg line="assembly" />
			<arg line="conf" />
<!--			<arg line="language-pack" /> -->
			<arg line="sql-scripts" />
			<arg line="tools" />
			<arg line="license" />
			<arg line="bin" />
			<arg line="readme" />
			<arg line="update-lams.sh" />
			<arg line="lams.properties" />
			<arg line="${PACKAGE-ROOT}" />
		</exec>

		<!-- Change permissions to executables -->
		<chmod file="${PACKAGE-ROOT}/ant/bin/ant" perm="ugo+rx"/>
		<chmod file="${PACKAGE-ROOT}/update-lams.sh" perm="ugo+rx"/>

		
		<!-- Remove all the CVS directories -->
        <exec executable="/bin/bash" failonerror="true">
            <arg value="-c" />
            <arg value="./createPackage.sh" />
        </exec>
	</target>
	
	<!-- clean the installation, the .bak file will remain in the build dir -->
	<target name="clean" description="Clean up output directories.">
		<delete dir="${PACKAGE-ROOT}" failonerror="false"/>
		<delete file="${PACKAGE-ROOT}.tar.gz" failonerror="false"/>
	</target>
	
	<target name="copy-tools" description="Copies all the tool deploy files to the tools directory">

		<echo>Copying tool libraries</echo>
		<delete dir="${TOOLS}/lib" failonerror="false"/>
		<mkdir dir="${TOOLS}/lib" /> 
		
		<copy todir="${TOOLS}/lib">
            <fileset dir="${LAMS_PROJECT_ROOT}/lams_build/deploy-tool/lib">
            	<include name="*.jar" />
            </fileset>
        </copy>
		
		<antcall target="copy-tool-deploy-package"> 
			<param name="tool.dir" value="lams_tool_assessment" /> 
			<param name="tool.sig" value="laasse10" /> 
		</antcall>
		
    </target>
	
    <target name="copy-tool-deploy-package" description="Copies the tools deploy packages after it has been built">
        <echo>Copying tool deploy project for ${tool.sig}</echo>
    	
    	<!-- Cleaning the directory -->
    	<delete dir="${TOOLS}/${tool.sig}" failonerror="false"/>
        <mkdir dir="${TOOLS}/${tool.sig}" /> 
    	
    	<mkdir dir="${TOOLS}/${tool.sig}/build/deploy/language" />
    	<mkdir dir="${TOOLS}/${tool.sig}/build/deploy/sql/updatescripts" />
    	
    	<!-- Copy the tool's build.properties -->
    	<copy todir="${TOOLS}/${tool.sig}">
            <fileset dir="${LAMS_PROJECT_ROOT}/${tool.dir}">
                <include name="build.properties" />  
            </fileset>
    	</copy>
    	
    	<!-- Copy files to the tool's deploy dir -->
    	<copy todir="${TOOLS}/${tool.sig}/build/deploy">
            <fileset dir="${LAMS_PROJECT_ROOT}/${tool.dir}/build/deploy">
                <include name="deploy.xml" />
            	<include name="lams-tool-${tool.sig}.jar" />
            	<include name="lams-tool-${tool.sig}.war" />
            	<include name="deploy.sh" />
            </fileset>
        </copy>
    	
    	<!-- Make sure deploy.sh is executable -->
    	<chmod file="${TOOLS}/${tool.sig}/build/deploy/deploy.sh" perm="ugo+rx"/>
    	
    	<!-- Copying language files for the tool -->
    	<copy todir="${TOOLS}/${tool.sig}/build/deploy/language">
    		<fileset dir="${LAMS_PROJECT_ROOT}/${tool.dir}/build/deploy/language" />
    	</copy>
    	
    	<!-- Copying sql files for the tool -->
        <copy todir="${TOOLS}/${tool.sig}/build/deploy/sql">
            <fileset dir="${LAMS_PROJECT_ROOT}/${tool.dir}/build/deploy/sql" />
        </copy>

    </target>
	
	<target name="compile-java" description="Compile custom java class">
		<javac srcdir="java" 
			classpath="../lams_build/lib/hibernate/hibernate3.jar:mysql-connector-java-5.0.8-bin.jar" 
			destdir="bin"
		/>
	</target>
	
</project>
