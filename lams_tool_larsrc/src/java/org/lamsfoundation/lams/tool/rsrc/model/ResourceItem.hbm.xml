<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.rsrc.model.ResourceItem"
        table="tl_larsrc11_resource_item"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ResourceItem.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="crUuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="cr_uuid"
        />

        <property
            name="crVersionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="cr_version_id"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <property
            name="imsSchema"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ims_schema"
        />

        <property
            name="initialItem"
            type="java.lang.String"
            update="true"
            insert="true"
            column="init_item"
        />

        <set
            name="itemInstructions"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id desc"
        >

            <key
                column="item_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.rsrc.model.ResourceItemInstruction"
            />

        </set>

        <property
            name="organizationXml"
            type="java.lang.String"
            update="true"
            insert="true"
            column="organization_xml"
            length="65535"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="url"
            type="java.lang.String"
            update="true"
            insert="true"
            column="url"
            length="65535"
        />

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.rsrc.model.ResourceUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="createByAuthor"
            type="boolean"
            update="true"
            insert="true"
            column="create_by_author"
        />

        <property
            name="hide"
            type="boolean"
            update="true"
            insert="true"
            column="is_hide"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ResourceItem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
