<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.videoRecorder.model.VideoRecorder"
        table="tl_lavidr10_videoRecorder"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-VideoRecorder.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updateDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="createBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="create_by"
            length="20"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="instructions"
            length="65535"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
            length="1"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
            length="65535"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
            length="1"
        />

        <property
            name="lockOnFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <property
            name="allowUseVoice"
            type="boolean"
            update="true"
            insert="true"
            column="allow_use_voice"
            length="1"
        />

        <property
            name="allowUseCamera"
            type="boolean"
            update="true"
            insert="true"
            column="allow_use_camera"
            length="1"
        />

        <property
            name="allowLearnerVideoVisibility"
            type="boolean"
            update="true"
            insert="true"
            column="allow_learner_video_visibility"
            length="1"
        />

        <property
            name="allowComments"
            type="boolean"
            update="true"
            insert="true"
            column="allow_comments"
            length="1"
        />

        <property
            name="allowRatings"
            type="boolean"
            update="true"
            insert="true"
            column="allow_ratings"
            length="1"
        />

        <property
            name="exportOffline"
            type="boolean"
            update="true"
            insert="true"
            column="export_offline"
            length="1"
        />

        <property
            name="exportAll"
            type="boolean"
            update="true"
            insert="true"
            column="export_all"
            length="1"
        />

        <property
            name="onlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="online_instructions"
            length="65535"
        />

        <property
            name="offlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="offline_instructions"
            length="65535"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
        />

        <property
            name="toolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_content_id"
            length="20"
        />

        <set
            name="videoRecorderAttachments"
            lazy="true"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="videoRecorder_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.videoRecorder.model.VideoRecorderAttachment"
            />

        </set>

        <set
            name="videoRecorderSessions"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="videoRecorder_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.videoRecorder.model.VideoRecorderSession"
            />

        </set>

        <one-to-one
            name="authorRecording"
            class="org.lamsfoundation.lams.tool.videoRecorder.model.VideoRecorderRecording"
            cascade="none"
            outer-join="auto"
            constrained="false"
        />

        <set
            name="conditions"
            lazy="true"
            cascade="all"
            sort="org.lamsfoundation.lams.learningdesign.TextSearchConditionComparator"
        >

            <key
                column="content_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.videoRecorder.model.VideoRecorderCondition"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-VideoRecorder.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
