<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="videoRecorderConditionForm"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.forms.VideoRecorderConditionForm"
    />
    <form-bean
      name="monitoringForm"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.forms.MonitoringForm"
    />
    <form-bean
      name="learningForm"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.forms.LearningForm"
    />
    <form-bean
      name="authoringForm"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.forms.AuthoringForm"
    />

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="test" path="/pages/test.html" />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/clearsession"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.ClearSessionAction"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/authoring"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringAction"
      name="authoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/authoring/main"
        redirect="false"
      />
      <forward
        name="message_page"
        path="tiles:/generic/message"
        redirect="false"
      />
    </action>
    <action
      path="/learning"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.LearningAction"
      name="learningForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="true"
    >
      <forward
        name="videoRecorder"
        path="tiles:/learning/main"
        redirect="false"
      />
      <forward
        name="runOffline"
        path="tiles:/learning/runOffline"
        redirect="false"
      />
      <forward
        name="defineLater"
        path="tiles:/learning/defineLater"
        redirect="false"
      />
    </action>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.MonitoringAction"
      name="monitoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/monitoring/main"
        redirect="false"
      />
      <forward
        name="videoRecorder_display"
        path="tiles:/monitoring/videoRecorder_display"
        redirect="false"
      />
    </action>
    <action
      path="/videoRecorderActions"
      type="org.lamsfoundation.lams.tool.videoRecorder.web.servlets.VideoRecorderAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
    </action>

   <action path="/authoring/newConditionInit"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	name="videoRecorderConditionForm" 
	scope="request" 
	validate="false"			
	parameter="newConditionInit">
	<forward name="addcondition" path="/pages/authoring/addCondition.jsp" />
</action>
<action path="/authoring/editCondition"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	name="videoRecorderConditionForm" 
	scope="request" 
	parameter="editCondition" 
	validate="false">
	<forward name="addcondition" path="/pages/authoring/addCondition.jsp" />
</action>
<action path="/authoring/saveOrUpdateCondition"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	parameter="saveOrUpdateCondition"
	name="videoRecorderConditionForm" 
	scope="request" 
	validate="false">
	<forward name="addcondition" path="/pages/authoring/addCondition.jsp" />
	<forward name="success" path="/pages/authoring/conditionList.jsp" />
</action>
<action path="/authoring/removeCondition"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	parameter="removeCondition">
	<forward name="success" path="/pages/authoring/conditionList.jsp" />
</action>
<action path="/authoring/upCondition"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	parameter="upCondition">
	<forward name="success" path="/pages/authoring/conditionList.jsp" />
</action>
<action path="/authoring/downCondition"
	type="org.lamsfoundation.lams.tool.videoRecorder.web.actions.AuthoringVideoRecorderConditionAction"
	parameter="downCondition">
	<forward name="success" path="/pages/authoring/conditionList.jsp" />
</action>

  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

    <message-resources    parameter="org.lamsfoundation.lams.tool.videoRecorder.ApplicationResources"/>

