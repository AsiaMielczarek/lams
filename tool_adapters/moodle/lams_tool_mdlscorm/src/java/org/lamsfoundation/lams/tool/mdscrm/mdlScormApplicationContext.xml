<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
	<!--  $Id$ -->
 	<!--
 	- Application context definition for MdlScorm tool business layer.
	-->
<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<!-- Hibernate SessionFactory -->
	  <bean id="mdlScormSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="mappingResources">
			<list>	
				<value>org/lamsfoundation/lams/tool/mdscrm/model/MdlScorm.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdscrm/model/MdlScormSession.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdscrm/model/MdlScormUser.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdscrm/model/MdlScormConfigItem.hbm.xml</value> 
			</list>
		</property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>
	</bean>

	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="mdlScormService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.mdscrm.service.MdlScormService">
				<property name="mdlScormSessionDAO"><ref bean="mdlScormSessionDAO"/></property>
				<property name="mdlScormUserDAO"><ref bean="mdlScormUserDAO"/></property>
				<property name="mdlScormDAO"><ref bean="mdlScormDAO"/></property>
				<property name="mdlScormConfigItemDAO"><ref bean="mdlScormConfigItemDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property> 	
				<!--<property name="integrationService"><ref bean="integrationService"/></property>-->
				<property name="auditService"><ref bean="auditService"/></property>		
 				<property name="mdlScormToolContentHandler"><ref bean="mdlScormToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>

				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="mdlScormDAO" class="org.lamsfoundation.lams.tool.mdscrm.dao.hibernate.MdlScormDAO">
		<property name="sessionFactory"><ref local="mdlScormSessionFactory"/></property>
	</bean>  
	
	<bean id="mdlScormConfigItemDAO" class="org.lamsfoundation.lams.tool.mdscrm.dao.hibernate.MdlScormConfigItemDAO">
		<property name="sessionFactory"><ref local="mdlScormSessionFactory"/></property>
	</bean> 

	<bean id="mdlScormSessionDAO" class="org.lamsfoundation.lams.tool.mdscrm.dao.hibernate.MdlScormSessionDAO">
		<property name="sessionFactory"><ref local="mdlScormSessionFactory"/></property>
	</bean>
	
	<bean id="mdlScormUserDAO" class="org.lamsfoundation.lams.tool.mdscrm.dao.hibernate.MdlScormUserDAO">
		<property name="sessionFactory"><ref local="mdlScormSessionFactory"/></property>
	</bean>
	
 	<bean id="mdlScormToolContentHandler" class="org.lamsfoundation.lams.tool.mdscrm.util.MdlScormToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
