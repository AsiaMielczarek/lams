<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
	<!--  $Id$ -->
 	<!--
 	- Application context definition for MdlWiki tool business layer.
	-->
<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<!-- Hibernate SessionFactory -->
	  <bean id="mdlWikiSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="mappingResources">
			<list>	
				<value>org/lamsfoundation/lams/tool/mdwiki/model/MdlWiki.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdwiki/model/MdlWikiSession.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdwiki/model/MdlWikiUser.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdwiki/model/MdlWikiConfigItem.hbm.xml</value> 
			</list>
		</property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>
	</bean>

	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="mdlWikiService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.mdwiki.service.MdlWikiService">
				<property name="mdlWikiSessionDAO"><ref bean="mdlWikiSessionDAO"/></property>
				<property name="mdlWikiUserDAO"><ref bean="mdlWikiUserDAO"/></property>
				<property name="mdlWikiDAO"><ref bean="mdlWikiDAO"/></property>
				<property name="mdlWikiConfigItemDAO"><ref bean="mdlWikiConfigItemDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property> 	
				<!--<property name="integrationService"><ref bean="integrationService"/></property>-->
				<property name="auditService"><ref bean="auditService"/></property>		
 				<property name="mdlWikiToolContentHandler"><ref bean="mdlWikiToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>

				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="mdlWikiDAO" class="org.lamsfoundation.lams.tool.mdwiki.dao.hibernate.MdlWikiDAO">
		<property name="sessionFactory"><ref local="mdlWikiSessionFactory"/></property>
	</bean>  
	
	<bean id="mdlWikiConfigItemDAO" class="org.lamsfoundation.lams.tool.mdwiki.dao.hibernate.MdlWikiConfigItemDAO">
		<property name="sessionFactory"><ref local="mdlWikiSessionFactory"/></property>
	</bean> 

	<bean id="mdlWikiSessionDAO" class="org.lamsfoundation.lams.tool.mdwiki.dao.hibernate.MdlWikiSessionDAO">
		<property name="sessionFactory"><ref local="mdlWikiSessionFactory"/></property>
	</bean>
	
	<bean id="mdlWikiUserDAO" class="org.lamsfoundation.lams.tool.mdwiki.dao.hibernate.MdlWikiUserDAO">
		<property name="sessionFactory"><ref local="mdlWikiSessionFactory"/></property>
	</bean>
	
 	<bean id="mdlWikiToolContentHandler" class="org.lamsfoundation.lams.tool.mdwiki.util.MdlWikiToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
