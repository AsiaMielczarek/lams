<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
	<!--  $Id$ -->
 	<!--
 	- Application context definition for MdlLesson tool business layer.
	-->
<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->

	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="mdlLessonService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.mdlesn.service.MdlLessonService">
				<property name="mdlLessonSessionDAO"><ref bean="mdlLessonSessionDAO"/></property>
				<property name="mdlLessonUserDAO"><ref bean="mdlLessonUserDAO"/></property>
				<property name="mdlLessonDAO"><ref bean="mdlLessonDAO"/></property>
				<property name="mdlLessonConfigItemDAO"><ref bean="mdlLessonConfigItemDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property> 	
				<!--<property name="integrationService"><ref bean="integrationService"/></property>-->
				<property name="auditService"><ref bean="auditService"/></property>		
 				<property name="mdlLessonToolContentHandler"><ref bean="mdlLessonToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>

				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="mdlLessonDAO" class="org.lamsfoundation.lams.tool.mdlesn.dao.hibernate.MdlLessonDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>  
	
	<bean id="mdlLessonConfigItemDAO" class="org.lamsfoundation.lams.tool.mdlesn.dao.hibernate.MdlLessonConfigItemDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean> 

	<bean id="mdlLessonSessionDAO" class="org.lamsfoundation.lams.tool.mdlesn.dao.hibernate.MdlLessonSessionDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>
	
	<bean id="mdlLessonUserDAO" class="org.lamsfoundation.lams.tool.mdlesn.dao.hibernate.MdlLessonUserDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>
	
 	<bean id="mdlLessonToolContentHandler" class="org.lamsfoundation.lams.tool.mdlesn.util.MdlLessonToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
