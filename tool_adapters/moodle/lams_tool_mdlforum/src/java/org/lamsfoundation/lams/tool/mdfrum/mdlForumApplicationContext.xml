<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
	<!--  $Id$ -->
 	<!--
 	- Application context definition for MdlForum tool business layer.
	-->
<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<!-- Hibernate SessionFactory -->
	  <bean id="mdlForumSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="mappingResources">
			<list>	
				<value>org/lamsfoundation/lams/tool/mdfrum/model/MdlForum.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdfrum/model/MdlForumSession.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdfrum/model/MdlForumUser.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/mdfrum/model/MdlForumConfigItem.hbm.xml</value> 
			</list>
		</property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>
	</bean>

	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="mdlForumService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.mdfrum.service.MdlForumService">
				<property name="mdlForumSessionDAO"><ref bean="mdlForumSessionDAO"/></property>
				<property name="mdlForumUserDAO"><ref bean="mdlForumUserDAO"/></property>
				<property name="mdlForumDAO"><ref bean="mdlForumDAO"/></property>
				<property name="mdlForumConfigItemDAO"><ref bean="mdlForumConfigItemDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property> 	
				<!--<property name="integrationService"><ref bean="integrationService"/></property>-->
				<property name="auditService"><ref bean="auditService"/></property>		
 				<property name="mdlForumToolContentHandler"><ref bean="mdlForumToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>

				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="mdlForumDAO" class="org.lamsfoundation.lams.tool.mdfrum.dao.hibernate.MdlForumDAO">
		<property name="sessionFactory"><ref local="mdlForumSessionFactory"/></property>
	</bean>  
	
	<bean id="mdlForumConfigItemDAO" class="org.lamsfoundation.lams.tool.mdfrum.dao.hibernate.MdlForumConfigItemDAO">
		<property name="sessionFactory"><ref local="mdlForumSessionFactory"/></property>
	</bean> 

	<bean id="mdlForumSessionDAO" class="org.lamsfoundation.lams.tool.mdfrum.dao.hibernate.MdlForumSessionDAO">
		<property name="sessionFactory"><ref local="mdlForumSessionFactory"/></property>
	</bean>
	
	<bean id="mdlForumUserDAO" class="org.lamsfoundation.lams.tool.mdfrum.dao.hibernate.MdlForumUserDAO">
		<property name="sessionFactory"><ref local="mdlForumSessionFactory"/></property>
	</bean>
	
 	<bean id="mdlForumToolContentHandler" class="org.lamsfoundation.lams.tool.mdfrum.util.MdlForumToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
