<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.mdfrum.model.MdlForum"
        table="tl_mdfrum10_mdlforum"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MdlForum.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updateDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
            length="1"
        />

        <property
            name="toolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_content_id"
            length="20"
        />

        <property
            name="extToolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="ext_tool_content_id"
            length="20"
        />

        <property
            name="extUsername"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ext_user_name"
            length="255"
        />

        <property
            name="extCourseId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ext_course_id"
            length="255"
        />

        <property
            name="extSection"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ext_section"
            length="255"
        />

        <set
            name="mdlForumSessions"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="mdlforum_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.mdfrum.model.MdlForumSession"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MdlForum.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
