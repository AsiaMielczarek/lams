<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.lamsfoundation.lams.tool.noticeboard.NoticeboardSession" 
    table="tl_lanb11_session"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="tl_lanb11_session"
    </meta>

    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
        unsaved-value="0"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="native"
            type="java.lang.Long"
            column="uid"
            unsaved-value="0"


        </meta>
        <generator class="native" />
    </id>

    <property
        name="nbSessionId"
        type="java.lang.Long"
        column="nb_session_id"
        not-null="true"
        length="20"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="nb_session_id"
            length="20"
            not-null="true"
        </meta>    
    </property>
    <property
        name="sessionStartDate"
        type="java.sql.Timestamp"
        column="session_start_date"
        length="19"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="session_start_date"
            length="19"
        </meta>    
    </property>
    <property
        name="sessionEndDate"
        type="java.sql.Timestamp"
        column="session_end_date"
        length="19"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="session_end_date"
            length="19"
        </meta>    
    </property>
    <property
        name="sessionStatus"
        type="java.lang.String"
        column="session_status"
        length="100"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="session_status"
            length="100"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to NoticeboardContent -->
    <many-to-one
        name="nbContent"
        class="org.lamsfoundation.lams.tool.noticeboard.NoticeboardContent"
        not-null="true"
        cascade="none"
        outer-join="auto"
        update="true"
        insert="true"
        access="property"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="nb_content_uid"         
        </meta>
        <column name="nb_content_uid" />
    </many-to-one>
    
    <!-- bi-directional one-to-many association to NoticeboardUser -->
    <set
        name="nbUsers"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"

           @hibernate.collection-key
            column="nb_session_uid"

           @hibernate.collection-one-to-many
            class="org.lamsfoundation.lams.tool.noticeboard.NoticeboardUser"
        </meta>
        <key>
            <column name="nb_session_uid" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.noticeboard.NoticeboardUser"
        />
    </set>

	
</class>
</hibernate-mapping>
