   <!-- =================================================================== -->
   <!-- ant properties/targets for mysql                                    -->
   <!-- note: this is not a proper xml file (there is no root element)      -->
   <!--       it is intended to be imported from a *real* xml file          -->
   <!-- =================================================================== -->

   <property name="database.script.file"           value="${script.dir}/${script_file}.sql"/>
   <!-- property name="database.driver.file"           value="${project.lib.dir}/mysql-connector-java-3.0.12-production-bin.jar"/-->
   <property name="database.driver.file"           value="${project.lib.dir}/mysql-connector-java-3.0.16-ga-bin.jar"/>   
   <property name="database.driver.classpath"      value="${database.driver.file}"/>
   <property name="database.driver"                value="org.gjt.mm.mysql.Driver"/>
   <property name="database.url"                   value="jdbc:mysql://localhost/${name}"/>
   <property name="database.userid"                value="root"/>
   <property name="database.password"              value=""/>
   <property name="database.schema"                value=""/>
   <property name="database.catalog"               value=""/>

   <property name="jboss.datasource.mapping"       value="mySQL"/>
