<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.SystemTool" 
    table="lams_system_tool"
>

	<cache usage="read-only" />
	
    
    

    <id
        name="systemToolId"
        type="java.lang.Long"
        column="system_tool_id"
    >
        
        <generator class="native" />
    </id>

    <property
        name="activityTypeId"
        type="java.lang.Integer"
        column="learning_activity_type_id"
        not-null="true"
    >
            
    </property>
    
    <property
        name="toolDisplayName"
        type="java.lang.String"
        column="tool_display_name"
        not-null="true"
        length="255"
    >
            
    </property>
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="65535"
    >
            
    </property>
    
    <property
        name="learnerUrl"
        type="java.lang.String"
        column="learner_url"
        not-null="true"
        length="65535"
    >
            
    </property>

    <property
        name="learnerPreviewUrl"
        type="java.lang.String"
        column="learner_preview_url"
        not-null="false"
        length="65535"
    >
            
    </property>

    <property
        name="learnerProgressUrl"
        type="java.lang.String"
        column="learner_progress_url"
        not-null="false"
        length="65535"
    >
            
    </property>


    <property name="createDateTime" type="java.sql.Timestamp"
			column="create_date_time" not-null="true" length="19">
			
	</property>
 
    <property
        name="monitorUrl"
        type="java.lang.String"
        column="monitor_url"
        not-null="false"
        length="65535"
    >
            
    </property>
    
    <property
        name="contributeUrl"
        type="java.lang.String"
        column="contribute_url"
        not-null="false"
        length="65535"
    >
            
    </property>
    
    <property
        name="helpUrl"
        type="java.lang.String"
        column="help_url"
        not-null="false"
        length="65535"
    >
            
    </property>
    
    <property
        name="adminUrl"
        type="java.lang.String"
        column="admin_url"
        not-null="false"
        length="65535"
    >
            
    </property>
    
   <property
        name="pedagogicalPlannerUrl"
        type="java.lang.String"
        column="pedagogical_planner_url"
        not-null="false"
        length="65535"
    >
            
    </property>
    
    
</class>
</hibernate-mapping>
