<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.lamsfoundation.lams.lesson.LearnerProgress" 
    table="lams_learner_progress"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="lams_learner_progress"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="learnerProgressId"
        type="java.lang.Long"
        column="learner_progress_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="identity"
            type="java.lang.Long"
            column="learner_progress_id"


        </meta>
        <generator class="identity" />
    </id>


    <!-- Associations -->  
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
        class="org.lamsfoundation.lams.usermanagement.User"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="user_id"         
        </meta>
        <column name="user_id" />
    </many-to-one>
    <!-- bi-directional many-to-one association to Lesson -->
    <many-to-one
        name="lesson"
        class="org.lamsfoundation.lams.lesson.Lesson"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="lesson_id"         
        </meta>
        <column name="lesson_id" />
    </many-to-one>

</class>
</hibernate-mapping>
