<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.events.Subscription"
        table="lams_event_subscriptions"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Subscription.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="lastOperationMessage"
            type="java.lang.String"
            update="true"
            insert="true"
            column="last_operation_message"
        />

        <property
            name="periodicity"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="periodicity"
        />

        <property
            name="userId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
        />

        <property
            name="deliveryMethodId"
            type="java.lang.Short"
            update="true"
            insert="true"
            column="delivery_method_id"
        />

        <property
            name="lastOperationTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="last_operation_time"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Subscription.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
