<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.events.Event"
        table="lams_events"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Event.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="defaultMessage"
            type="java.lang.String"
            update="true"
            insert="true"
            column="default_message"
        />

        <property
            name="defaultSubject"
            type="java.lang.String"
            update="true"
            insert="true"
            column="default_subject"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <property
            name="scope"
            type="java.lang.String"
            update="true"
            insert="true"
            column="scope"
        />

        <property
            name="eventSessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="event_session_id"
        />

        <set
            name="subscriptions"
            lazy="false"
            cascade="all-delete-orphan"
            sort="unsorted"
            order-by="last_operation_time desc"
            outer-join="true"
        >

            <key
                column="event_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.events.Subscription"
            />

        </set>

        <property
            name="triggered"
            type="boolean"
            update="true"
            insert="true"
            column="triggered"
        />

        <property
            name="failTime"
            type="java.util.Date"
            update="true"
            insert="true"
            column="fail_time"
        />

        <property
            name="message"
            type="java.lang.String"
            update="true"
            insert="true"
            column="message"
        />

        <property
            name="subject"
            type="java.lang.String"
            update="true"
            insert="true"
            column="subject"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Event.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
