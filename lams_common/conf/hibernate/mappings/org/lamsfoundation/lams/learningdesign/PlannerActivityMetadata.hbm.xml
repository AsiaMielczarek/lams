<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class name="org.lamsfoundation.lams.learningdesign.PlannerActivityMetadata" table="lams_planner_activity_metadata">
	<meta attribute="class-description" inherit="false">
		@hibernate.class
		table="lams_planner_activity_metadata"
    </meta>

	<id name="id" type="java.lang.Long">
		<column name="activity_id" />
		<generator class="foreign">
			<param name="property">activity</param>
		</generator>
	</id>
	
	<one-to-one name="activity" constrained="true" foreign-key="FK_lams_planner_metadata_primary" />    
	 
    <property name="collapsed" type="java.lang.Boolean" column="collapsed" length="1"/>
	<property name="expanded" type="java.lang.Boolean" column="expanded" length="1"/>
	<property name="hidden" type="java.lang.Boolean" column="hidden" length="1"/>
	<property name="editingAdvice" type="java.lang.String" column="editing_advice" length="255"/>      
	           
</class>
</hibernate-mapping>
