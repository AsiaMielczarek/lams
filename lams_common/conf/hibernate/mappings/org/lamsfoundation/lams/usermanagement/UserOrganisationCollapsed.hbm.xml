<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.usermanagement.UserOrganisationCollapsed" 
    table="lams_user_organisation_collapsed"
>
	<cache usage="transactional" />

    <id
        name="userOrganisationId"
        column="user_organisation_id"
    >
    	<generator class="foreign">
    		<param name="property">userOrganisation</param>
    	</generator>
    </id>

    <one-to-one
        name="userOrganisation"
        class="org.lamsfoundation.lams.usermanagement.UserOrganisation"
        constrained="true"
    >
    </one-to-one>
    
	<property
        name="collapsed"
        type="java.lang.Boolean"
        column="collapsed"
        not-null="true"
        length="1"
    >
    </property>

</class>
</hibernate-mapping>
