<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.lamsfoundation.lams.usermanagement.Organisation" 
    table="lams_organisation"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="lams_organisation"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>
	
	<cache usage="transactional" />
	
    <id
        name="organisationId"
        type="java.lang.Integer"
        column="organisation_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="native"
            type="java.lang.Integer"
            column="organisation_id"


        </meta>
        <meta attribute="use-in-equals">true</meta>
        <generator class="native" />
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="name"
        length="250"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="name"
            length="250"
        </meta>    
    </property>
      <property
        name="code"
        type="java.lang.String"
        column="code"
        length="250"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="code"
            length="250"
        </meta>    
    </property>
    
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="250"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="description"
            length="250"
        </meta>    
    </property>
    <property
        name="createDate"
        type="java.sql.Timestamp"
        column="create_date"
        not-null="true"
        length="19"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="create_date"
            length="19"
            not-null="true"
        </meta>    
    </property>
    
	<!--  The following admin fields are NOT NULL DEFAULT 0 in the database -->
   <property
        name="courseAdminCanAddNewUsers"
        type="java.lang.Boolean"
        column="admin_add_new_users"
        not-null="false"
        length="1"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="admin_add_new_users"
            length="1"
            not-null="true"
        </meta>    
    </property>

  <property
        name="courseAdminCanBrowseAllUsers"
        type="java.lang.Boolean"
        column="admin_browse_all_users"
        not-null="false"
        length="1"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="admin_browse_all_users"
            length="1"
            not-null="true"
        </meta>    
    </property>

  <property
        name="courseAdminCanChangeStatusOfCourse"
        type="java.lang.Boolean"
        column="admin_change_status"
        not-null="false"
        length="1"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="admin_change_status"
            length="1"
            not-null="true"
        </meta>    
    </property>

  <property
        name="courseAdminCanCreateGuestAccounts"
        type="java.lang.Boolean"
        column="admin_create_guest"
        not-null="false"
        length="1"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="admin_create_guest"
            length="1"
            not-null="true"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to the User who created the organisation -->
    <many-to-one 
    	name="createdBy" 
    	class="org.lamsfoundation.lams.usermanagement.User" 
    	not-null="true">
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="created_by"         
        </meta>
        <column name="created_by" />
	</many-to-one>
	
    <!-- bi-directional many-to-one association to OrganisationState -->
    <many-to-one
        name="organisationState"
        class="org.lamsfoundation.lams.usermanagement.OrganisationState"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="organisation_state_id"         
        </meta>
        <column name="organisation_state_id" />
    </many-to-one>

    <!-- bi-directional many-to-one association to Workspace -->
    <many-to-one
        name="workspace"
        class="org.lamsfoundation.lams.usermanagement.Workspace"
        cascade="all"
        not-null="false"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
			cascade="all"
            not-null="false"
           @hibernate.column name="workspace_id"         
        </meta>
        <column name="workspace_id" />
    </many-to-one>
    <!-- bi-directional many-to-one association to OrganisationType -->
    <many-to-one
        name="organisationType"
        class="org.lamsfoundation.lams.usermanagement.OrganisationType"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="organisation_type_id"         
        </meta>
        <column name="organisation_type_id" />
    </many-to-one>
    <!-- bi-directional one-to-many association to UserOrganisation -->
    <set
        name="userOrganisations"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"

           @hibernate.collection-key
            column="organisation_id"

           @hibernate.collection-one-to-many
            class="org.lamsfoundation.lams.usermanagement.UserOrganisation"
        </meta>
        
        <cache usage="transactional" />
        <key>
            <column name="organisation_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.usermanagement.UserOrganisation"
        />
    </set>
    <!-- bi-directional one-to-many association to WorkspaceFolder -->
    <set
        name="childOrganisations"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="parent_organisation_id"

           @hibernate.collection-one-to-many
            class="org.lamsfoundation.lams.usermanagement.Organisation"
        </meta>
        
        <cache usage="transactional" />
        <key>
            <column name="parent_organisation_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.usermanagement.Organisation"
        />
    </set>
    <!-- bi-directional many-to-one association to Organisation -->
    <many-to-one
        name="parentOrganisation"
        class="org.lamsfoundation.lams.usermanagement.Organisation"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
           @hibernate.column name="parent_organisation_id"         
        </meta>
        <column name="parent_organisation_id" />
    </many-to-one>
    <!-- bi-directional one-to-many association to Lesson -->
    <set
        name="lessons"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="organisation_id"

           @hibernate.collection-one-to-many
            class="org.lamsfoundation.lams.lesson.Lesson"
        </meta>
        <key>
            <column name="organisation_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.lesson.Lesson"
        />
    </set>

    <!-- bi-directional many-to-one association to SupportedLocale -->
    <many-to-one
        name="locale"
        class="org.lamsfoundation.lams.usermanagement.SupportedLocale"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="locale_id"         
        </meta>
        <column name="locale_id" />
    </many-to-one>
</class>
</hibernate-mapping>
