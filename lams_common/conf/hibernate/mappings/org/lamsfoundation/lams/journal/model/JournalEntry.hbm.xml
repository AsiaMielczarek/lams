<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.journal.model.JournalEntry"
        table="lams_journal_entry"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-JournalEntry.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="lessionID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="lesson_id"
            length="20"
        />

        <property
            name="toolSessionID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_session_id"
        />

        <property
            name="toolSignature"
            type="java.lang.String"
            update="true"
            insert="true"
            column="toolSignature"
        />

        <property
            name="userID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="entry"
            type="java.lang.String"
            update="true"
            insert="true"
            column="entry"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-JournalEntry.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
