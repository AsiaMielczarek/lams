<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="com.lamsinternational.lams.tool.ToolSession" 
    table="lams_tool_session"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="lams_tool_session"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="toolSessionId"
        type="java.lang.Long"
        column="tool_session_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="identity"
            type="java.lang.Long"
            column="tool_session_id"


        </meta>
        <generator class="identity" />
    </id>

    <property
        name="activityId"
        type="long"
        column="activity_id"
        not-null="true"
        length="20"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="activity_id"
            length="20"
            not-null="true"
        </meta>    
    </property>
    <property
        name="toolSessionKey"
        type="long"
        column="tool_session_key"
        not-null="true"
        length="20"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="tool_session_key"
            length="20"
            not-null="true"
        </meta>    
    </property>
    <property
        name="createDateTime"
        type="java.sql.Timestamp"
        column="create_date_time"
        not-null="true"
        length="19"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="create_date_time"
            length="19"
            not-null="true"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to UserToolSession -->
    <set
        name="userToolSessions"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="tool_session_id"

           @hibernate.collection-one-to-many
            class="com.lamsinternational.lams.lesson.UserToolSession"
        </meta>
        <key>
            <column name="tool_session_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.lesson.UserToolSession"
        />
    </set>
    <!-- bi-directional many-to-one association to Group -->
    <many-to-one
        name="group"
        class="com.lamsinternational.lams.learningdesign.Group"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="group_id"         
        </meta>
        <column name="group_id" />
    </many-to-one>
    <!-- bi-directional many-to-one association to ToolSessionState -->
    <many-to-one
        name="toolSessionState"
        class="com.lamsinternational.lams.tool.ToolSessionState"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="tool_session_state_id"         
        </meta>
        <column name="tool_session_state_id" />
    </many-to-one>

</class>
</hibernate-mapping>
