<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="com.lamsinternational.lams.learningdesign.Group" 
    table="lams_group"
>
    <meta attribute="class-description" inherit="false">
       @hibernate.class
        table="lams_group"
    </meta>
    <meta attribute="implement-equals" inherit="false">true</meta>

    <id
        name="groupId"
        type="java.lang.Long"
        column="group_id"
    >
        <meta attribute="field-description">
           @hibernate.id
            generator-class="identity"
            type="java.lang.Long"
            column="group_id"


        </meta>
        <generator class="identity" />
    </id>

    <property
        name="orderId"
        type="int"
        column="order_id"
        not-null="true"
        length="6"
    >
        <meta attribute="field-description">
           @hibernate.property
            column="order_id"
            length="6"
            not-null="true"
        </meta>    
    </property>

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to UserGroup -->
    <set
        name="userGroups"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="group_id"

           @hibernate.collection-one-to-many
            class="com.lamsinternational.lams.lesson.UserGroup"
        </meta>
        <key>
            <column name="group_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.lesson.UserGroup"
        />
    </set>
    <!-- bi-directional one-to-many association to ToolSession -->
    <set
        name="toolSessions"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <meta attribute="field-description">
           @hibernate.set
            lazy="true"
            inverse="true"
            cascade="none"

           @hibernate.collection-key
            column="group_id"

           @hibernate.collection-one-to-many
            class="com.lamsinternational.lams.tool.ToolSession"
        </meta>
        <key>
            <column name="group_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.tool.ToolSession"
        />
    </set>
    <!-- bi-directional many-to-one association to Grouping -->
    <many-to-one
        name="grouping"
        class="com.lamsinternational.lams.learningdesign.Grouping"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="grouping_id"         
        </meta>
        <column name="grouping_id" />
    </many-to-one>

</class>
</hibernate-mapping>
