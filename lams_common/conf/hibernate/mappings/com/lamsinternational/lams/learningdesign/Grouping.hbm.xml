<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>


<class 
    name="com.lamsinternational.lams.learningdesign.Grouping" 
    table="lams_grouping"
>
    <discriminator column="grouping_type_id" type="int"/>
    <id
        name="groupingId"
        type="java.lang.Long"
        column="grouping_id"
    >
        <generator class="identity" />
    </id>

    <property name="maxNumberOfGroups" type="java.lang.Integer" column="max_number_of_groups" length="3"/>

    <!-- Associations -->

    <list
        name="groups"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="grouping_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.learningdesign.Group"
        />
        <index
            column="order_id"                                     
        />
    </list>
   
    <!-- bi-directional one-to-many association to Activity -->
    <set
        name="activities"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="grouping_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.learningdesign.Activity"
        />
    </set>

    <subclass name="com.lamsinternational.lams.learningdesign.RandomGrouping" discriminator-value="1">
        <property
        name="numberOfGroups"
        type="java.lang.Integer"
        column="number_of_groups"
        length="11"
        />
        <property
        name="learnersPerGroup"
        type="java.lang.Integer"
        column="learners_per_group"
        length="11"
        />
    </subclass>
    <subclass name="com.lamsinternational.lams.learningdesign.ChosenGrouping" discriminator-value="2"/>
        
    <subclass name="com.lamsinternational.lams.lesson.LessonClass" discriminator-value="3">
        <!-- bi-directional many-to-one (effectiviey a  one to one) assocaites to Group in staff group role -->
        <many-to-one name="staffGroup" class="com.lamsinternational.lams.learningdesign.Group" column="staff_group_id" unique="true"/>
         <!-- bi-directional one-to-many association to Lesson -->
    <set
        name="lessons"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="class_grouping_id" />
        </key>
        <one-to-many 
            class="com.lamsinternational.lams.lesson.Lesson"
        />
    </set>
    </subclass>
</class>
</hibernate-mapping>
