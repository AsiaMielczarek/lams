        name="userToolSessionState"
        class="com.lamsinternational.lams.lesson.UserToolSessionState"
        not-null="true"
    >
        <meta attribute="field-description">
           @hibernate.many-to-one
            not-null="true"
           @hibernate.column name="user_tool_session_state_id"         
        </meta>
        <column name="user_tool_session_state_id" />
