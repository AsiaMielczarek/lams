            update="false"
            insert="false"
        </meta>
        <meta attribute="field-description">
           @hibernate.column
            name="user_id"
        </meta>
    	<column name="user_id" />
	</many-to-one>
	
    <!-- bi-directional many-to-one association to ToolSession -->
