            name="toolSessionId" 
            column="tool_session_id" 
            type="java.lang.Long"
            length="20"
        >
            <meta attribute="field-description">
               @hibernate.property
                column="tool_session_id"
                length="20"
            </meta> 
        </key-property>
        <key-property 
            name="userId" 
