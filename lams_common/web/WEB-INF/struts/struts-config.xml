<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <!--
         If you have non XDoclet forms, define them in a file called struts-forms.xml and
         place it in your merge directory.
    -->
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <!--
    Define your forwards in a file called global-forwards.xml and place
    it in your merge directory.
  -->

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/user"
      type="org.lamsfoundation.lams.usermanagement.web.UserAction"
      name="UserActionForm"
      scope="session"
      input=".admin.user"
      unknown="false"
      validate="true"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/admin"
      type="org.lamsfoundation.lams.usermanagement.web.AdminAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="organisation"
        path=".admin.organisation"
        redirect="false"
      />
      <forward
        name="user"
        path=".admin.user"
        redirect="false"
      />
      <forward
        name="usersadd"
        path=".admin.usersadd"
        redirect="false"
      />
      <forward
        name="usersremove"
        path=".admin.usersremove"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/usersadd"
      type="org.lamsfoundation.lams.usermanagement.web.UsersAddAction"
      name="UsersAddActionForm"
      scope="session"
      input=".admin.usersadd"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="usersadd"
        path=".admin.usersadd"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="usersremove"
      type="org.lamsfoundation.lams.usermanagement.web.UsersRemoveAction"
      name="UsersRemoveActionForm"
      scope="session"
      input=".admin.usersremove"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/admin/organisation"
      type="org.lamsfoundation.lams.usermanagement.web.OrganisationAction"
      name="OrganisationActionForm"
      scope="session"
      input=".admin.organisation"
      unknown="false"
      validate="true"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>

    <!-- If you have non XDoclet actions, define them in a file called struts-actions.xml and place it in your merge directory. -->
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

   <!-- Define your Struts message-resources in a file called struts-message-resources.xml and place it in your merge directory. -->

   <!-- Define your Struts plugins in a file called struts-plugins.xml and place it in your merge directory. -->

</struts-config>
