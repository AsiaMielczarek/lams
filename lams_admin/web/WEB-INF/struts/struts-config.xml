<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="OrganisationActionForm"
      type="org.lamsfoundation.lams.admin.web.OrganisationActionForm"
    />
    <form-bean
      name="CacheActionForm"
      type="org.lamsfoundation.lams.sysadmin.web.CacheActionForm"
    />
    <form-bean
      name="UsersRemoveActionForm"
      type="org.lamsfoundation.lams.admin.web.UsersRemoveActionForm"
    />
    <form-bean
      name="UserActionForm"
      type="org.lamsfoundation.lams.admin.web.UserActionForm"
    />
    <form-bean
      name="UsersAddActionForm"
      type="org.lamsfoundation.lams.admin.web.UsersAddActionForm"
    />

    <!--
         If you have non XDoclet forms, define them in a file called struts-forms.xml and
         place it in your merge directory.
    -->
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="error" path=".error"/>
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="usersremove"
      type="org.lamsfoundation.lams.admin.web.UsersRemoveAction"
      name="UsersRemoveActionForm"
      scope="session"
      input=".admin.usersremove"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/admin/organisation"
      type="org.lamsfoundation.lams.admin.web.OrganisationAction"
      name="OrganisationActionForm"
      scope="session"
      input=".admin.organisation"
      unknown="false"
      validate="true"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/sysadmin/cache"
      type="org.lamsfoundation.lams.sysadmin.web.CacheAction"
      name="CacheActionForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="cache"
        path=".cache"
        redirect="false"
      />
    </action>
    <action
      path="/admin"
      type="org.lamsfoundation.lams.admin.web.AdminAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="organisation"
        path=".admin.organisation"
        redirect="false"
      />
      <forward
        name="user"
        path=".admin.user"
        redirect="false"
      />
      <forward
        name="usersadd"
        path=".admin.usersadd"
        redirect="false"
      />
      <forward
        name="usersremove"
        path=".admin.usersremove"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/user"
      type="org.lamsfoundation.lams.admin.web.UserAction"
      name="UserActionForm"
      scope="session"
      input=".admin.user"
      unknown="false"
      validate="true"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>
    <action
      path="/usersadd"
      type="org.lamsfoundation.lams.admin.web.UsersAddAction"
      name="UsersAddActionForm"
      scope="session"
      input=".admin.usersadd"
      unknown="false"
      validate="false"
    >
      <forward
        name="admin"
        path=".admin"
        redirect="false"
      />
      <forward
        name="usersadd"
        path=".admin.usersadd"
        redirect="false"
      />
      <forward
        name="error"
        path=".admin.error"
        redirect="false"
      />
    </action>

       <action
      path="/adminstart"
      forward=".admin"
    />
    <action
      path="/sysadminstart"
      forward=".sysadmin"
    />
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

      <message-resources parameter="org.lamsfoundation.lams.admin.applicationResources"/>

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
