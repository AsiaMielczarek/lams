<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="UserOrgRoleForm"
      type="org.lamsfoundation.lams.admin.web.UserOrgRoleForm"
    />
    <form-bean
      name="CacheActionForm"
      type="org.lamsfoundation.lams.admin.web.CacheActionForm"
    />

   <form-bean name="OrganisationForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="orgId" type="java.lang.Integer" />
	<form-property name="parentId" type="java.lang.Integer" />
	<form-property name="parentName" type="java.lang.String" />
	<form-property name="name" type="java.lang.String" />
	<form-property name="code" type="java.lang.String" />
	<form-property name="description" type="java.lang.String" />
	<form-property name="localeId" type="java.lang.Byte" initial="1"/>
	<form-property name="typeId" type="java.lang.Integer" />
	<form-property name="stateId" type="java.lang.Integer" />
	<form-property name="courseAdminCanAddNewUsers" type="java.lang.Boolean" initial="false"/>
	<form-property name="courseAdminCanBrowseAllUsers" type="java.lang.Boolean" initial="false"/>
	<form-property name="courseAdminCanChangeStatusOfCourse" type="java.lang.Boolean" initial="false"/>
</form-bean>

<form-bean name="UserRolesForm" type="org.apache.struts.action.DynaActionForm">
    <form-property name="orgId" type="java.lang.Integer" />
	<form-property name="userId" type="java.lang.Integer" />
    <form-property name="roles" type="java.lang.String[]" />
</form-bean>

<form-bean name="UserForm" type="org.apache.struts.action.DynaActionForm">
    <form-property name="orgId" type="java.lang.Integer" />
	<form-property name="userId" type="java.lang.Integer" />
	<form-property name="login" type="java.lang.String" />
	<form-property name="password" type="java.lang.String" />
	<form-property name="password2" type="java.lang.String" />
	<form-property name="title" type="java.lang.String" />
	<form-property name="firstName" type="java.lang.String" />
	<form-property name="lastName" type="java.lang.String" />
	<form-property name="addressLine1" type="java.lang.String" />
	<form-property name="addressLine2" type="java.lang.String" />
	<form-property name="addressLine3" type="java.lang.String" />
	<form-property name="city" type="java.lang.String" />
	<form-property name="state" type="java.lang.String" />
	<form-property name="postcode" type="java.lang.String" />
	<form-property name="country" type="java.lang.String" />
	<form-property name="dayPhone" type="java.lang.String" />
	<form-property name="eveningPhone" type="java.lang.String" />
	<form-property name="mobilePhone" type="java.lang.String" />
	<form-property name="fax" type="java.lang.String" />
	<form-property name="email" type="java.lang.String" />
	<form-property name="localeId" type="java.lang.Byte" />
</form-bean>

<form-bean name="UserOrgForm" type="org.apache.struts.action.DynaActionForm">
    <form-property name="orgId" type="java.lang.Integer" />
    <form-property name="orgName" type="java.lang.String" />
    <form-property name="userIds" type="java.lang.String[]" />
</form-bean>

<form-bean name="UserSearchForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="sUserId" type="java.lang.String" />
    <form-property name="sLogin" type="java.lang.String" />
    <form-property name="sFirstName" type="java.lang.String" />
    <form-property name="sLastName" type="java.lang.String" />
    <form-property name="searched" type="java.lang.Boolean" initial="false" />
</form-bean>

<form-bean name="LoginMaintainForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="logo"  type="org.apache.struts.upload.FormFile" />
	<form-property name="news" type="java.lang.String" />
</form-bean>

<form-bean name="ServerOrgMapForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="sid" type="java.lang.Integer" initial="-1"/>
	<form-property name="serverid" type="java.lang.String" />
	<form-property name="serverkey" type="java.lang.String" />
	<form-property name="servername" type="java.lang.String" />
	<form-property name="serverdesc" type="java.lang.String" />
	<form-property name="prefix" type="java.lang.String"/>
	<form-property name="userinfoUrl" type="java.lang.String" />
	<form-property name="timeoutUrl" type="java.lang.String" initial="http://dummy.url/not.implemented"/>
	<form-property name="disabled" type="java.lang.Boolean" initial="false"/>
	<form-property name="orgId" type="java.lang.Integer" initial="-1"/>
	<form-property name="newOrg" type="java.lang.Boolean" initial="false"/>
	<form-property name="orgName" type="java.lang.String" />
</form-bean>

<form-bean name="ConfigForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="cKey" type="java.lang.String[]" />
	<form-property name="cValue" type="java.lang.String[]" />
	<form-property name="method" type="java.lang.String" />
</form-bean>
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
    key="error.system"
    path="/error.jsp"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="error" path=".error"/>
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/orgsave"
      type="org.lamsfoundation.lams.admin.web.OrgSaveAction"
      name="OrganisationForm"
      scope="request"
      input=".organisation"
      unknown="false"
      validate="false"
    >
      <forward
        name="organisation"
        path=".organisation"
        redirect="false"
      />
      <forward
        name="orglist"
        path="/orgmanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/usersearch"
      type="org.lamsfoundation.lams.admin.web.UserSearchAction"
      name="UserSearchForm"
      scope="request"
      input=".usersearchlist"
      unknown="false"
      validate="false"
    >
      <forward
        name="usersearchlist"
        path=".usersearchlist"
        redirect="false"
      />
    </action>
    <action
      path="/orgmanage"
      type="org.lamsfoundation.lams.admin.web.OrgManageAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="orglist"
        path=".orglist"
        redirect="false"
      />
    </action>
    <action
      path="/joblist"
      type="org.lamsfoundation.lams.admin.web.ScheduledJobListAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="list"
        path=".joblist"
        redirect="false"
      />
    </action>
    <action
      path="/disabledmanage"
      type="org.lamsfoundation.lams.admin.web.DisabledUserManageAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="disabledlist"
        path=".disabledlist"
        redirect="false"
      />
    </action>
    <action
      path="/serverlist"
      type="org.lamsfoundation.lams.admin.web.ServerListAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="serverlist"
        path=".serverlist"
        redirect="false"
      />
    </action>
    <action
      path="/usersave"
      type="org.lamsfoundation.lams.admin.web.UserSaveAction"
      name="UserForm"
      scope="request"
      input=".user"
      unknown="false"
      validate="false"
    >
      <forward
        name="user"
        path="/user.do?method=edit"
        redirect="false"
      />
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
      <forward
        name="userroles"
        path="/userroles.do"
        redirect="false"
      />
      <forward
        name="usersearch"
        path="/usersearch.do"
        redirect="false"
      />
    </action>
    <action
      path="/userorgrolesave"
      type="org.lamsfoundation.lams.admin.web.UserOrgRoleSaveAction"
      name="UserOrgRoleForm"
      scope="session"
      input=".userorgrole"
      unknown="false"
      validate="false"
    >
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/cache"
      type="org.lamsfoundation.lams.admin.web.CacheAction"
      name="CacheActionForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="cache"
        path=".cache"
        redirect="false"
      />
    </action>
    <action
      path="/serversave"
      type="org.lamsfoundation.lams.admin.web.ServerSaveAction"
      name="ServerOrgMapForm"
      scope="request"
      input=".servermaintain"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="/serverlist.do"
        redirect="false"
      />
    </action>
    <action
      path="/servermaintain"
      type="org.lamsfoundation.lams.admin.web.ServerMaintainAction"
      name="ServerOrgMapForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="servermaintain"
        path=".servermaintain"
        redirect="false"
      />
      <forward
        name="serverlist"
        path="/serverlist.do"
        redirect="false"
      />
    </action>
    <action
      path="/userroles"
      type="org.lamsfoundation.lams.admin.web.UserRolesAction"
      name="UserRolesForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="userrole"
        path=".userrole"
        redirect="false"
      />
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/usermanage"
      type="org.lamsfoundation.lams.admin.web.UserManageAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="userlist"
        path=".userlist"
        redirect="false"
      />
    </action>
    <action
      path="/organisation"
      type="org.lamsfoundation.lams.admin.web.OrganisationAction"
      name="OrganisationForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="organisation"
        path=".organisation"
        redirect="false"
      />
      <forward
        name="orglist"
        path="/orgmanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/config"
      type="org.lamsfoundation.lams.admin.web.ConfigAction"
      name="ConfigForm"
      scope="request"
      input=".config"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="config"
        path=".config"
        redirect="false"
      />
      <forward
        name="sysadmin"
        path=".sysadmin"
        redirect="false"
      />
    </action>
    <action
      path="/loginmaintain"
      type="org.lamsfoundation.lams.admin.web.LoginMaintainAction"
      name="LoginMaintainForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="loginmaintain"
        path=".loginmaintain"
        redirect="false"
      />
    </action>
    <action
      path="/userrolessave"
      type="org.lamsfoundation.lams.admin.web.UserRolesSaveAction"
      name="UserRolesForm"
      scope="request"
      input=".userroles"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="userroles"
        path="/userroles.do"
        redirect="false"
      />
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/userorgsave"
      type="org.lamsfoundation.lams.admin.web.UserOrgSaveAction"
      name="UserOrgForm"
      scope="request"
      input=".userorg"
      unknown="false"
      validate="false"
    >
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
      <forward
        name="userorgrole"
        path="/userorgrole.do"
        redirect="false"
      />
    </action>
    <action
      path="/userorgrole"
      type="org.lamsfoundation.lams.admin.web.UserOrgRoleAction"
      name="UserOrgRoleForm"
      scope="session"
      unknown="false"
      validate="false"
    >
      <forward
        name="userorgrole"
        path=".userorgrole"
        redirect="false"
      />
    </action>
    <action
      path="/user"
      type="org.lamsfoundation.lams.admin.web.UserAction"
      name="UserForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="user"
        path=".user"
        redirect="false"
      />
      <forward
        name="userlist"
        path="/usermanage.do"
        redirect="false"
      />
      <forward
        name="remove"
        path=".remove"
        redirect="false"
      />
      <forward
        name="disabledlist"
        path="/disabledmanage.do"
        redirect="false"
      />
      <forward
        name="usersearch"
        path="/usersearch.do"
        redirect="false"
      />
    </action>
    <action
      path="/userorg"
      type="org.lamsfoundation.lams.admin.web.UserOrgAction"
      name="UserOrgForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="userorg"
        path=".userorg"
        redirect="false"
      />
    </action>
    <action
      path="/loginsave"
      type="org.lamsfoundation.lams.admin.web.LoginSaveAction"
      name="LoginMaintainForm"
      scope="request"
      input=".loginmaintian"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="sysadmin"
        path=".sysadmin"
        redirect="false"
      />
      <forward
        name="loginmaintain"
        path=".loginmaintain"
        redirect="false"
      />
    </action>

       <action
      path="/sysadminstart"
      forward=".sysadmin"
    />
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

      <message-resources parameter="org.lamsfoundation.lams.admin.ApplicationResources"/>

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
