<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="CacheActionForm"
      type="org.lamsfoundation.lams.admin.web.CacheActionForm"
    />

   <form-bean name="OrganisationForm" type="org.apache.struts.action.DynaActionForm">
	<form-property name="orgId" type="java.lang.Integer" />
	<form-property name="parentId" type="java.lang.Integer" />
	<form-property name="parentName" type="java.lang.String" />
	<form-property name="name" type="java.lang.String" />
	<form-property name="code" type="java.lang.String" />
	<form-property name="description" type="java.lang.String" />
	<form-property name="localeLanguage" type="java.lang.String" />
	<form-property name="localeCountry" type="java.lang.String" />
	<form-property name="typeId" type="java.lang.Integer" />
	<form-property name="stateId" type="java.lang.Integer" />
</form-bean>
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.apache.struts.action.ExceptionHandler"
    key="error.system"
    path=".error"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="error" path=".error"/>
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/orgsave"
      type="org.lamsfoundation.lams.admin.web.OrgSaveAction"
      name="OrganisationForm"
      scope="request"
      input=".organisation"
      unknown="false"
      validate="false"
    >
      <forward
        name="organisation"
        path=".organisation"
        redirect="false"
      />
      <forward
        name="orglist"
        path="/orgmanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/joblist"
      type="org.lamsfoundation.lams.admin.web.ScheduledJobListAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="list"
        path=".joblist"
        redirect="false"
      />
    </action>
    <action
      path="/orgmanage"
      type="org.lamsfoundation.lams.admin.web.OrgManageAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="orglist"
        path=".orglist"
        redirect="false"
      />
    </action>
    <action
      path="/organisation"
      type="org.lamsfoundation.lams.admin.web.OrganisationAction"
      name="OrganisationForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="organisation"
        path=".organisation"
        redirect="false"
      />
      <forward
        name="orglist"
        path="/orgmanage.do"
        redirect="false"
      />
    </action>
    <action
      path="/cache"
      type="org.lamsfoundation.lams.admin.web.CacheAction"
      name="CacheActionForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="cache"
        path=".cache"
        redirect="false"
      />
    </action>

       <action
      path="/sysadminstart"
      forward=".sysadmin"
    />
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

      <message-resources parameter="org.lamsfoundation.lams.admin.ApplicationResources"/>

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
