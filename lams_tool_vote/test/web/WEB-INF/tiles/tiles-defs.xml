<tiles-definitions>
<!-- ============= template Definitions ====================== -->
	<definition name=".baseDef" path="/template.jsp">
		<put name="title" value="Base Template Page"/>
		<put name="pageHeader" value = "Base Template"/>
		<put name="header" value="/header.jsp"/>
		<put name="content" value="/baseContent.jsp" />	
		<put name="footer" value="/footer.jsp"/>	
	</definition>
<!-- ============= Exception Page Definitions ====================== -->	
	<definition name=".systemError" extends=".baseDef" >
		<put name="title" value="System Error Page"/>
		<put name="pageHeader" value = "System Exception"/>
		<put name="content" value="/systemErrorContent.jsp" />	
	</definition>

<!-- ============= Qa Authoring Page Definitions ====================== -->	
	<definition name=".questions" extends=".baseDef" >
		<put name="title" value=""/>
		<put name="pageHeader" value = ""/>
		<put name="content" value="" />	
	</definition>

</tiles-definitions>