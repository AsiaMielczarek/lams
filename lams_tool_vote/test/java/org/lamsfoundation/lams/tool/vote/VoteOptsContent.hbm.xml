<class 
    name="org.lamsfoundation.lams.tool.vote.pojos.VoteOptsContent" 
    table="tl_vote11_options_content"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>
    
    <property
        name="voteQueOptionText"
        type="java.lang.String"
        column="vote_que_option_text"
        length="250"
    >
    </property>
    
    <property
        name="voteQueContentId"
        type="java.lang.Long"
        column="vote_que_content_id"
        not-null="true"
   	    update="false"
	    insert="false"
        length="20"
    >
    </property>
    

    <!-- Associations -->
    <many-to-one
        name="voteQueContent"
        class="org.lamsfoundation.lams.tool.vote.pojos.VoteQueContent"
        not-null="true"        
        cascade="none"
        outer-join="auto"
        update="true"
        insert="true"
        access="property"
    >
        <column name="vote_que_content_id" />
    </many-to-one>
    
    <set
        name="voteUsrAttempts"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
    >
        <key>
            <column name="vote_que_option_id" />
        </key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.vote.pojos.VoteUsrAttempt"
        />
    </set>
   
</class>
</hibernate-mapping>
