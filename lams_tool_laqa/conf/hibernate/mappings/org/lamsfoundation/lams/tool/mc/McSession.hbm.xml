<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
<class 
    name="org.lamsfoundation.lams.tool.mc.McSession" 
    table="tl_lamc11_session"
>
    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
		    <generator class="native"/>
    </id>

    <property
        name="mcSessionId"
        type="java.lang.Long"
        column="mc_session_id"
        not-null="true"
        length="20"
    >
    </property>

    <property
        name="sessionStartDate"
        type="java.util.Date"
        access="property"
        column="session_start_date"
        length="20"
    />
    
    <property
        name="sessionEndDate"
        type="java.util.Date"
        access="property"
        column="session_end_date"
        length="20"
    />
    
    <property
        name="sessionStatus"
        type="java.lang.String"
        access="property"
        column="session_status"
        length="100"
    />
    
    <property
        name="mcContentId"
        type="java.lang.Long"
        update="false"
        insert="false"
        access="property"
        column="mc_content_id"
        length="20"
    />

   <many-to-one
        name="mcContent"
        class="org.lamsfoundation.lams.tool.mc.McContent"
        not-null="true"        
        cascade="none"
        outer-join="auto"
        update="true"
        insert="true"
        access="property"
    >
        <column
            name="mc_content_id" 
        />
    </many-to-one>
    
    <set
        name="mcQueUsers"
        lazy="true"
        inverse="true"
        cascade="all-delete-orphan"
        sort="unsorted"
    >
        <key>
        	<column name="mc_session_id" />
   		</key>
        <one-to-many 
            class="org.lamsfoundation.lams.tool.mc.McQueUsr"
        />
    </set>
    

</class>
</hibernate-mapping>
