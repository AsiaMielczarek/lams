<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.qa.QaUsrResp" 
    table="tl_laqa11_usr_resp"
>
    <id
        name="responseId"
        type="java.lang.Long"
        column="response_id"
    >
        <generator class="increment" />
    </id>

    <property
        name="answer"
        type="java.lang.String"
        column="answer"
        length="65535"
    >
    </property>
    
    <property
            name="hidden"
            type="boolean"
            update="true"
            insert="true"
            access="property"
            column="hidden"
   >
   </property>
    
    <property
        name="attemptTime"
        type="java.util.Date"
        column="attempt_time"
        length="10"
    >
    </property>


    <property
        name="queUsrId"
        type="java.lang.Long"
        column="que_usr_id"
        update="false"
        insert="false"
    >
    </property>


    <property
        name="qaQueContentId"
        type="java.lang.Long"
        column="qa_que_content_id"
        update="false"
        insert="false"
    >
    </property>


   <many-to-one
            name="qaQueContent"
            class="org.lamsfoundation.lams.tool.qa.QaQueContent"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="qa_que_content_id" 
            />
   </many-to-one>


  <many-to-one
            name="qaQueUser"
            class="org.lamsfoundation.lams.tool.qa.QaQueUsr"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="que_usr_id" 
            />
  </many-to-one>


</class>
</hibernate-mapping>
