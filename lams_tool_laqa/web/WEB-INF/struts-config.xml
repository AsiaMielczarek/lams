<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->

<form-beans>
	<form-bean name="QaAuthoringForm" type="org.lamsfoundation.lams.tool.qa.web.QaAuthoringForm"/>
   	<form-bean name="QaLearningForm" type="org.lamsfoundation.lams.tool.qa.web.QaLearningForm"/>
   	<form-bean name="QaMonitoringForm" type="org.lamsfoundation.lams.tool.qa.web.QaMonitoringForm"/>
</form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

<!-- 
<global-exceptions>
      <exception
        key="error.system.qa"
        type="org.lamsfoundation.lams.tool.qa.QaApplicationException"
        handler="org.lamsfoundation.lams.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
</global-exceptions>
-->

  <!-- ========== Global Forward Definitions =================================== -->
   <global-forwards>
     <forward name="starter" path="/authoringStarter"/>   
	  <forward name="learningStarter" path="/learningStarter"/>   
	  <forward name="monitoringStarter" path="/monitoringStarter"/>   
 </global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
  <action-mappings>
   
	<!--Authoring Starter  -->
   <!--  action path="/authoringStarter" type="org.lamsfoundation.lams.tool.qa.web.QaStarterAction" 
   			name="QaAuthoringForm" input=".starter" --> 
    <action
      path="/authoringStarter"
      type="org.lamsfoundation.lams.tool.qa.web.QaStarterAction"
      name="QaAuthoringForm"
      scope="session"
      unknown="false"
      validate="false"
    >
        <forward
          name="load"
          path="/author_page.jsp"
          redirect="false"
        />
	  	<forward
          name="monitoringReport"
          path=".monitoringReport"
          redirect="true"
   	  	/>
	  	<forward
		    name="errorList"
		    path=".qaErrorBox"
		    redirect="true"
	  	/>
	</action>  
	<!--Learning Starter  -->
   <action path="/learningStarter" type="org.lamsfoundation.lams.tool.qa.web.QaLearningStarterAction" 
   			name="QaLearningForm" input=".learningStarter"> 
		  <forward
		    name="load"
		    path=".answers"
		    redirect="true"
		  />
	  	
	      <forward
	        name="learnerReport"
	        path=".learnerReport"
	        redirect="true"
	      />

	      <forward
	        name="learningStarter"
	        path=".learningStarter"
	        redirect="true"
	      />
	      
		<forward
		    name="errorList"
		    path=".qaErrorBox"
		    redirect="true"
	  	/>      
	</action>  
	<!--Monitoring Starter -->
	<action path="/monitoringStarter" type="org.lamsfoundation.lams.tool.qa.web.QaMonitoringStarterAction" 
   			name="QaMonitoringForm" input=".monitoringStarter"> 
      <forward
        name="monitoringReport"
        path=".monitoringReport"
        redirect="true"
   	  	/>
      <forward
        name="load"
        path=".questions"
        redirect="true"
      />     
      <forward
        name="monitoringError"
        path=".monitoringError"
        redirect="true"
      />	
	</action>  
	
	
    <action
      path="/authoring"
      type="org.lamsfoundation.lams.tool.qa.web.QAction"
      name="QaAuthoringForm"
      scope="session"
      input="/author_page.jsp"
      parameter="dispatch"
      unknown="false"
      validate="true"
    >
      <forward
        name="load"
        path="/author_page.jsp"
        redirect="true"
      />
      <forward
        name="starter"
        path=".starter"
        redirect="true"
      />
      <forward
        name="monitoringReport"
        path=".monitoringReport"
        redirect="true"
   	  	/>
    </action>


 <action
      path="/learning"
      type="org.lamsfoundation.lams.tool.qa.web.QAction"
      name="QaLearningForm"
      scope="session"
      input=".answers"
      parameter="method"
      unknown="false"
      validate="true"
    >
      <forward
        name="load"
        path=".answers"
        redirect="true"
      />
      <forward
        name="learningStarter"
        path=".learningStarter"
        redirect="true"
      />
      
      <forward
        name="learnerReport"
        path=".learnerReport"
        redirect="true"
      />
      
</action>



 <action
      path="/monitoring"
      type="org.lamsfoundation.lams.tool.qa.web.QaMonitoringAction"
      name="QaMonitoringForm"
      scope="session"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="monitoringReport"
        path=".monitoringReport"
        redirect="true"
   	  	/>
	   	
	   	<forward
        name="load"
        path=".questions"
        redirect="true"
      />	
      
	   	<forward
        name="error"
        path=".error"
        redirect="true"
      />	

</action>


<!--Export Portfoloio Starter  -->
 <action
      path="/exportPortfolioStarter"
      type="org.lamsfoundation.lams.tool.qa.web.QaExportPortfolioStarterAction"
      name="QaExportPortfolioForm"
      scope="session"
      input=".exportPortfolioStarter"
    >
      	<forward
        name="portfolioReport"
        path=".portfolioReport"
        redirect="true"
      />	
    
 </action>

 </action-mappings>

  <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->
 <message-resources parameter="org.lamsfoundation.lams.tool.qa.QaResources"/>

<!-- StrutsTestCase doesn't support tile well at the moment, Have to be 
commented out for testing-->
<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
