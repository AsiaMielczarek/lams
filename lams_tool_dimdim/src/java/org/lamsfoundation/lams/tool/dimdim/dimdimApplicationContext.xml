<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
 
	<!--  $Id$ -->
 	<!--
 	- Application context definition for Dimdim tool business layer.
	-->
<beans>

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<!-- Hibernate SessionFactory -->
	  <bean id="dimdimSessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource"><ref bean="toolDataSource"/></property>
		<property name="mappingResources">
			<list>	
				<value>org/lamsfoundation/lams/tool/dimdim/model/Dimdim.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/dimdim/model/DimdimSession.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/dimdim/model/DimdimUser.hbm.xml</value>
				<value>org/lamsfoundation/lams/tool/dimdim/model/DimdimAttachment.hbm.xml</value> 
				<value>org/lamsfoundation/lams/tool/dimdim/model/DimdimConfig.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties"><ref bean="hibernateProperties"/></property>
	</bean>

	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="dimdimService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.dimdim.service.DimdimService">
				<property name="dimdimAttachmentDAO"><ref bean="dimdimAttachmentDAO"/></property>
				<property name="dimdimSessionDAO"><ref bean="dimdimSessionDAO"/></property>
				<property name="dimdimUserDAO"><ref bean="dimdimUserDAO"/></property>
				<property name="dimdimDAO"><ref bean="dimdimDAO"/></property>
				<property name="dimdimConfigDAO"><ref bean="dimdimConfigDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property>	
				<property name="auditService"><ref bean="auditService"/></property>		
 				<property name="dimdimToolContentHandler"><ref bean="dimdimToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="setAsDefineLater">PROPAGATION_REQUIRED</prop>
                <prop key="setAsRunOffline">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>

				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="dimdimDAO" class="org.lamsfoundation.lams.tool.dimdim.dao.hibernate.DimdimDAO">
		<property name="sessionFactory"><ref local="dimdimSessionFactory"/></property>
	</bean>  

	<bean id="dimdimSessionDAO" class="org.lamsfoundation.lams.tool.dimdim.dao.hibernate.DimdimSessionDAO">
		<property name="sessionFactory"><ref local="dimdimSessionFactory"/></property>
	</bean>
	
	<bean id="dimdimUserDAO" class="org.lamsfoundation.lams.tool.dimdim.dao.hibernate.DimdimUserDAO">
		<property name="sessionFactory"><ref local="dimdimSessionFactory"/></property>
	</bean>
	
	<bean id="dimdimAttachmentDAO" class="org.lamsfoundation.lams.tool.dimdim.dao.hibernate.DimdimAttachmentDAO">
		<property name="sessionFactory"><ref local="dimdimSessionFactory"/></property>
	</bean>
	
	<bean id="dimdimConfigDAO" class="org.lamsfoundation.lams.tool.dimdim.dao.hibernate.DimdimConfigDAO">
		<property name="sessionFactory"><ref local="dimdimSessionFactory"/></property>
	</bean>
	
 	<bean id="dimdimToolContentHandler" class="org.lamsfoundation.lams.tool.dimdim.util.DimdimToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
