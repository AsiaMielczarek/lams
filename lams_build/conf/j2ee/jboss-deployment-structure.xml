<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2">
  <!-- Make sub deployments not isolated, so they can see each others classes without a Class-Path entry -->
  <ear-subdeployments-isolated>false</ear-subdeployments-isolated>
  <deployment>
    <!-- exclude-subsystem prevents a subsystems deployment unit processors running on a deployment -->
    <!-- which gives basically the same effect as removing the subsystem, but it only affects single deployment 
    <exclude-subsystems>
        <subsystem name="resteasy" />
    </exclude-subsystems>
    -->
    
    <!-- Exclusions allow you to prevent the server from automatically adding some dependencies     
    <exclusions>
        <module name="org.javassist" />
    </exclusions>
    -->
    
    <!-- This allows you to define additional dependencies, it is the same as using the Dependencies: manifest attribute -->
    <dependencies>
      <module name="org.apache.poi" export="true" />
      <module name="org.apache.aspirin" export="true" />
      <module name="com.tacitknowledge.autopatch" export="true" />
      <module name="org.apache.axis" export="true" /> <!-- depends on: javax.xml.rpc.api, javax.wsdl4j.api:1.5 -->
      <module name="org.apache.batik" export="true" />
      <module name="net.sf.cglib" export="true" />
      <module name="net.fckeditor" export="true" />
      <module name="com.flagstone" export="true" />
      <module name="org.apache.commons.beanutils" export="true" /> <!-- depends on: org.apache.commons.logging, org.apache.commons.collections -->
      <module name="org.apache.commons.io" export="true" />
      <module name="org.apache.commons.lang" export="true" />
      <module name="org.apache.commons.codec" export="true" />
      <module name="org.apache.commons.pool" export="true" />
      <module name="org.apache.commons.fileupload" export="true" />
      <module name="org.apache.commons.httpclient" export="true" />
      <module name="org.apache.commons.validator" export="true" />
      <module name="org.hibernate.cache" export="true" />
      <module name="org.jboss.cache" export="true" />
      <module name="org.jgroups" export="true" />
      <module name="org.jboss.jbossweb" export="true" />
      <module name="org.jdom" slot="0.7" export="true" />
      <module name="org.verisign.joid" export="true" />
      <module name="com.google.gson" export="true" />
      <module name="org.apache.lucene" slot="2.4" export="true" />
      <module name="org.quartz" export="true" />
      <module name="uk.ac.reload" export="true" />
      <module name="org.springframework" export="true" />
      <module name="org.apache.struts" export="true" /> <!-- depends on: org.antlr, org.apache.oro, javax.servlet.jsp.api,
      																	 org.apache.commons.validator, org.apache.commons.logging,
      																	 org.apache.xmlcommons, org.apache.commons.digester -->
      <module name="org.apache.strutsel" export="true" /> <!-- depends on: org.apache.struts, javax.servlet.jsp.api -->
      <module name="org.tuckey.urlrewrite" export="true" />
      <module name="com.allaire.wddx" export="true" />
      <module name="org.apache.xmlcommons" export="true" />
      <module name="com.thoughtworks.xstream" export="true" /> <!-- depends on: nu.xom, org.xmlpull (xpp), org.joda.time:2.1 -->
      <module name="org.lamsfoundation.lams.session" export="true" />
      <module name="org.lamsfoundation.lams.valve" export="true" />
      
      <!-- Import META-INF/services for ServiceLoader impls as well
      <module name="myservicemodule" services="import"/>
       -->
    </dependencies>
    
    <!-- These add additional classes to the module. In this case it is the same as including the jar in the EAR's lib directory
    <resources>
      <resource-root path="my-library.jar" />
    </resources>
     -->
  </deployment>
  
  
