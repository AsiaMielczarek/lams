<?xml version="1.0" encoding="UTF-8"?>

<project name="changeme" default="all" basedir=".">
    <property name="testappxml" value="../j2ee/application.xml"/>
    
    <path id="task.class.path">
        <fileset dir="../../build/lib" includes="**/*.jar"/>
    </path>

    <taskdef name="addwebapp" classname="org.lamsfoundation.lams.tool.deploy.ant.AddWebAppToApplicationXmlTask" classpathref="task.class.path"/>
    <taskdef name="removewebapp" classname="org.lamsfoundation.lams.tool.deploy.ant.RemoveWebAppFromApplicationXmlTask" classpathref="task.class.path"/>

    <target name="testAddWebAppToApplicationXml">
        <addwebapp appxml="${testappxml}" weburi="test" contextroot="/test"/>
    </target>
    
    <target name="testRemoveWebAppFromApplicationXml">
        <removewebapp appxml="${testappxml}" weburi="test" contextroot="/test"/>
    </target>
</project>
