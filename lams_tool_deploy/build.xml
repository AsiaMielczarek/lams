<project name="lams_tool_deploy" default="usage" basedir=".">
	
        <property name="classes.dir" value="build/classes"/>
        <property name="test.classes.dir" value="build/test"/>
        <property name="build.dir" value="build/lib"/>
        <property name="lib.dir" value="lib"/>
        <property name="src.dir" value="src/java"/>
        <property name="test.src.dir" value="test/java"/>
        <property name="jar.file" value="${build.dir}/lams_tool_util.jar"/>
        <property name="test.dir" value="test"/>
        <property name="test.file.dir" value="test/file"/>
        <property name="debug" value="on"/>
        
        <path id="src.class.path">
            <fileset dir="${lib.dir}">
                <include name="**/*.jar"/>
            </fileset>
        </path>
        
        <path id="test.class.path">
            <pathelement location="${classes.dir}"/> 
            <path refid="src.class.path"/>
        </path>
        
        <path id="junit.class.path">
            <pathelement location="${test.classes.dir}"/> 
            <path refid="test.class.path"/>
            <fileset dir="${test.file.dir}">
                <include name="**/*"/>
            </fileset>
        </path>

        <target name="usage">
	</target> 
        
        <target name="init">
            <mkdir dir="${classes.dir}"/>
            <mkdir dir="${test.classes.dir}"/>
            <mkdir dir="${build.dir}"/>
        </target>   
        
        <target name="clean" depends="init">
            <delete includeEmptyDirs="true" >
                <fileset dir="${classes.dir}">
                    <include name="**/*"/>
                </fileset>
                <fileset dir="${build.dir}">
                    <include name="**/*"/>
                </fileset>
                <fileset dir="${test.classes.dir}">
                    <include name="**/*"/>
                </fileset>
            </delete>
        </target>
        
        <target name="compile" depends="clean">
            <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="src.class.path" debug="${debug}"/>
            <javac srcdir="${test.src.dir}" destdir="${test.classes.dir}" classpathref="test.class.path" debug="${debug}"/>
        </target>
        
        <target name="build" depends="compile">
            <jar destfile="${jar.file}" basedir="${classes.dir}"/>
        </target>
        
        
        <target name="junit" depends="compile" description="Build and test the project">
        <!-- NOTE: needs fork and dir so it can find test files! -->
            <junit printsummary="withOutAndErr" haltonfailure="true" showoutput="on" fork="on" dir="${basedir}">
                <classpath>
                    <path refid="junit.class.path"/>
                </classpath>
                <formatter type="plain"/>
                <test name="org.lamsfoundation.lams.tool.deploy.FileTokenReplacerTest" todir="${basedir}/test/results" outfile="FileTokenReplacer"/>
                <test name="org.lamsfoundation.lams.tool.deploy.DeployConfigTest" todir="${basedir}/test/results" outfile="DeployConfig"/>
                <test name="org.lamsfoundation.lams.tool.deploy.DeployFilesTaskTest" todir="${basedir}/test/results" outfile="DeployFilesTask"/>
                <test name="org.lamsfoundation.lams.tool.deploy.ScriptRunnerTest" todir="${basedir}/test/results" outfile="ScriptRunner"/>
                <test name="org.lamsfoundation.lams.tool.deploy.ToolDBDeployTaskTest" todir="${basedir}/test/results" outfile="ToolDBDeployTaskTest"/>
                <test name="org.lamsfoundation.lams.tool.deploy.ToolDBActivateTaskTest" todir="${basedir}/test/results" outfile="ToolDBActivateTaskTest"/>
                <test name="org.lamsfoundation.lams.tool.deploy.DeployTest" todir="${basedir}/test/results" outfile="DeployTest"/>
            </junit>
        </target>
</project>
