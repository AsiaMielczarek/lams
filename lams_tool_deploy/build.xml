<project name="lams_tool_deploy" default="usage" basedir=".">
	
        <property name="classes.dir" value="build/classes"/>
        <property name="test.classes.dir" value="build/test"/>
        <property name="build.dir" value="build/lib"/>
    	<property name="build.report.dir" value="build/report"/>
        <property name="lib.dir" value="lib"/>
        <property name="src.dir" value="src/java"/>
        <property name="test.src.dir" value="test/java"/>
        <property name="jar.file" value="${build.dir}/lams-tool-deploy.jar"/>
        <property name="test.dir" value="test"/>
        <property name="test.file.dir" value="test/file"/>
        <property name="debug" value="on"/>
        
        <path id="src.class.path">
            <fileset dir="${lib.dir}">
                <include name="**/*.jar"/>
            </fileset>
        </path>
        
        <path id="test.class.path">
            <pathelement location="${classes.dir}"/> 
            <path refid="src.class.path"/>
        </path>
        
        <path id="junit.class.path">
            <pathelement location="${test.classes.dir}"/> 
            <path refid="test.class.path"/>
            <fileset dir="${test.file.dir}">
                <include name="**/*"/>
            </fileset>
        </path>

        <target name="usage">
	</target> 
        
        <target name="init">
            <mkdir dir="${classes.dir}"/>
            <mkdir dir="${test.classes.dir}"/>
            <mkdir dir="${build.dir}"/>
        </target>   
        
        <target name="clean" depends="init">
            <delete includeEmptyDirs="true" >
                <fileset dir="${classes.dir}">
                    <include name="**/*"/>
                </fileset>
                <fileset dir="${build.dir}">
                    <include name="**/*"/>
                </fileset>
                <fileset dir="${test.classes.dir}">
                    <include name="**/*"/>
                </fileset>
            </delete>
        </target>
        
        <target name="compile" depends="clean">
            <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="src.class.path" debug="${debug}"/>
            <javac srcdir="${test.src.dir}" destdir="${test.classes.dir}" classpathref="test.class.path" debug="${debug}"/>
    		<copy overwrite="yes" todir="${classes.dir}">
    			<fileset dir="${src.dir}">
    				<include name="**/*.properties"/>
    			</fileset>
    		</copy>
        </target>
        
        <target name="build" depends="compile">
            <jar destfile="${jar.file}" basedir="${classes.dir}"/>
        </target>
        
        
        <target name="junit" depends="compile" description="Build and test the project">
        <!-- NOTE: needs fork and dir so it can find test files! -->
    		<mkdir dir="${build.report.dir}" />
            <junit printsummary="withOutAndErr" haltonerror="no" haltonfailure="no" showoutput="on" fork="on" dir="${basedir}">
                <classpath>
                    <path refid="junit.class.path"/>
                </classpath>
        		<formatter type="plain" usefile="false" />
        		<formatter type="xml" />
        		<batchtest todir="${build.report.dir}">
        			<fileset dir="${test.src.dir}">
                        <include name="**/*Test.java"/>
        				<!-- base class for test cases -->
                        <exclude name="**/ToolDBTest.java"/> 
        				<exclude name="**/ToolDBTest.java"/>
        			</fileset>
        		</batchtest>
            </junit>
        </target>
	
		<target name="test-report" depends="junit" description="Run the tests">
			<mkdir dir="${build.report.dir}/html" />
			<junitreport>
				<fileset dir="${build.report.dir}">
					<include name="TEST-*.xml" />
				</fileset>
				<report todir="${build.report.dir}/html" />
			</junitreport>
		</target>
</project>
