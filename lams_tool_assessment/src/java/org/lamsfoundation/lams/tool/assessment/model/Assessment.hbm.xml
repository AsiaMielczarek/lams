<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.assessment.model.Assessment"
        table="tl_laasse10_assessment"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Assessment.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.assessment.model.AssessmentUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
        />

        <property
            name="timeLimit"
            type="int"
            update="true"
            insert="true"
            column="time_limit"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="onlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="online_instructions"
        />

        <property
            name="offlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="offline_instructions"
        />

        <set
            name="attachments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="assessment_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentAttachment"
            />

        </set>

        <set
            name="questions"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="assessment_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestion"
            />

        </set>

        <set
            name="overallFeedbacks"
            lazy="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id asc"
        >

            <key
                column="assessment_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentOverallFeedback"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="allowQuestionFeedback"
            type="boolean"
            update="true"
            insert="true"
            column="allow_question_feedback"
        />

        <property
            name="allowOverallFeedbackAfterQuestion"
            type="boolean"
            update="true"
            insert="true"
            column="allow_overall_feedback"
        />

        <property
            name="allowRightWrongAnswersAfterQuestion"
            type="boolean"
            update="true"
            insert="true"
            column="allow_right_wrong_answers"
        />

        <property
            name="allowGradesAfterAttempt"
            type="boolean"
            update="true"
            insert="true"
            column="allow_grades_after_attempt"
        />

        <property
            name="questionsPerPage"
            type="int"
            update="true"
            insert="true"
            column="questions_per_page"
        />

        <property
            name="attemptsAllowed"
            type="int"
            update="true"
            insert="true"
            column="attempts_allowed"
        />

        <property
            name="shuffled"
            type="boolean"
            update="true"
            insert="true"
            column="shuffled"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="notifyTeachersOnAttemptCompletion"
            type="boolean"
            update="true"
            insert="true"
            column="attempt_completion_notify"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Assessment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
