<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="org.lamsfoundation.lams.tool.signup.model.SignupUser"
		table="lams_signup_user">

		<cache usage="transactional" />

		<id name="signupUserId" type="java.lang.Integer" column="signup_user_id">
			<generator class="native" />
		</id>

		<many-to-one name="user" cascade="none"
			class="org.lamsfoundation.lams.usermanagement.User">
			<column name="user_id" />
		</many-to-one>

		<many-to-one name="organisation" cascade="none"
			class="org.lamsfoundation.lams.usermanagement.Organisation">
			<column name="organisation_id" />
		</many-to-one>

		<property name="signupDate" type="java.sql.Timestamp" column="signup_date"
			not-null="true" length="19">
		</property>

	</class>

</hibernate-mapping>