<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>

	<class name="org.lamsfoundation.lams.tool.signup.model.SignupOrganisation"
		table="lams_signup_organisation">

		<cache usage="transactional" />

		<id name="signupOrganisationId" type="java.lang.Integer" column="signup_organisation_id">
			<generator class="native" />
		</id>

		<many-to-one name="organisation" cascade="none"
			class="org.lamsfoundation.lams.usermanagement.Organisation">
			<column name="organisation_id" />
		</many-to-one>

		<property name="addToLessons" type="java.lang.Boolean"
			column="add_to_lessons" length="1">
		</property>

		<property name="addAsStaff" type="java.lang.Boolean" column="add_as_staff"
			length="1">
		</property>
		
		<property name="addWithAuthor" type="java.lang.Boolean" column="add_with_author"
			length="1">
		</property>
		
		<property name="addWithMonitor" type="java.lang.Boolean" column="add_with_monitor"
			length="1">
		</property>

		<property name="courseKey" type="java.lang.String" column="course_key"
			length="255">
		</property>

		<property name="blurb" type="java.lang.String" column="blurb"
			length="2147483647">
		</property>

		<property name="createDate" type="java.sql.Timestamp" column="create_date"
			not-null="true" length="19">
		</property>
		
		<property name="disabled" type="java.lang.Boolean" column="disabled"
			length="1">
		</property>
		
		<property name="context" type="java.lang.String" column="context"
			length="255">
		</property>

	</class>

</hibernate-mapping>