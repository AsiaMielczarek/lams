<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.chat.Chat"
        table="tl_lachat11_chat"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Chat.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updateDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="createBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="create_by"
            length="20"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="instructions"
            length="65535"
        />

        <property
            name="runOffline"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="run_offline"
            length="1"
        />

        <property
            name="lockOnFinished"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <property
            name="onlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="online_instructions"
            length="65535"
        />

        <property
            name="offlineInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="offline_instructions"
            length="65535"
        />

        <property
            name="contentInUse"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="defineLater"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
        />

        <property
            name="toolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_content_id"
            length="20"
        />

        <set
            name="chatAttachments"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="chat_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.chat.ChatAttachment"
            />

        </set>

        <set
            name="chatSessions"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="chat_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.chat.ChatSession"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Chat.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
