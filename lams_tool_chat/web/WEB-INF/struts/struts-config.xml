<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="monitoringForm"
      type="org.lamsfoundation.lams.tool.chat.web.forms.MonitoringForm"
    />
    <form-bean
      name="authoringForm"
      type="org.lamsfoundation.lams.tool.chat.web.forms.AuthoringForm"
    />
    <form-bean
      name="learningForm"
      type="org.lamsfoundation.lams.tool.chat.web.forms.LearningForm"
    />

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
    key="error.system"
    path="/error.jsp"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="test" path="/pages/test.html" />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/learning"
      type="org.lamsfoundation.lams.tool.chat.web.actions.LearningAction"
      name="learningForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="true"
    >
      <forward
        name="learning"
        path="tiles:/learning/main"
        redirect="false"
      />
      <forward
        name="runOffline"
        path="tiles:/learning/runOffline"
        redirect="false"
      />
      <forward
        name="defineLater"
        path="tiles:/learning/defineLater"
        redirect="false"
      />
      <forward
        name="notebook"
        path="tiles:/learning/notebook"
        redirect="false"
      />
    </action>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.tool.chat.web.actions.MonitoringAction"
      name="monitoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/monitoring/main"
        redirect="false"
      />
      <forward
        name="chat_client"
        path="tiles:/monitoring/chat_client"
        redirect="false"
      />
      <forward
        name="chat_history"
        path="tiles:/monitoring/chat_history"
        redirect="false"
      />
      <forward
        name="notebook"
        path="tiles:/monitoring/notebook"
        redirect="false"
      />
    </action>
    <action
      path="/clearsession"
      type="org.lamsfoundation.lams.tool.chat.web.actions.ClearSessionAction"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/authoring"
      type="org.lamsfoundation.lams.tool.chat.web.actions.AuthoringAction"
      name="authoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/authoring/main"
        redirect="false"
      />
      <forward
        name="message_page"
        path="tiles:/generic/message"
        redirect="false"
      />
    </action>

    <!-- If you have non XDoclet actions, define them in a file called struts-actions.xml and place it in your merge directory. -->
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

    <message-resources    parameter="org.lamsfoundation.lams.tool.chat.ApplicationResources"/>

  <!-- 
<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
	<set-property property="pathnames"
		value="/WEB-INF/struts/validator-rules.xml,/WEB-INF/struts/validation.xml" />
</plug-in>
-->
<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config" value="/WEB-INF/struts/tiles-defs.xml"/>
</plug-in>

</struts-config>
